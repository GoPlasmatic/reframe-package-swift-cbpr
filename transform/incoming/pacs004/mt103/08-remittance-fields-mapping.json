{
    "id": "pacs004-mt103-remittance-fields-mapping",
    "name": "PACS.004 to MT103 RETN Remittance Fields Mapping",
    "description": "Maps remittance information and return reason for MT103 RETN (Fields 70, 72, 77B)",
    "priority": 10,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "pacs.004"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "pacs004-mt103-agent-fields-mapping"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_field_57"]},
        {"==": [{"var": "metadata.SwiftMT.message_type"}, "103"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_field_70",
            "name": "Map Field 70 - Remittance Information",
            "description": "Map ultimate debtor and creditor",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#70",
                            "logic": {
                                "narrative": {
                                    "filter": [
                                        [
                                            { "if": [
                                                {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.RtrChain.UltmtDbtr"},
                                                {"cat": ["/ULTD/", {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.RtrChain.UltmtDbtr.Nm"}]},
                                                null
                                            ]},
                                            { "if": [
                                                {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.RtrChain.UltmtCdtr"},
                                                {"cat": ["/ULTB/", {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.RtrChain.UltmtCdtr.Nm"}]},
                                                null
                                            ]}
                                        ],
                                        {"var": ""}
                                    ]
                                }
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "map_field_72",
            "name": "Map Field 72 - Sender to Receiver Information",
            "description": "Map return reason and references (RETN code must be in first line)",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#72",
                            "logic": { "information": 
                                {"merge": [
                                    "/RETN/",
                                    { "if": [
                                        {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.OrgnlInstrId"},
                                        {"cat": ["/MREF/", {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.OrgnlInstrId"}]},
                                        null
                                    ]},
                                    { "if": [
                                        {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.OrgnlEndToEndId"},
                                        {"cat": ["/TREF/", {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.OrgnlEndToEndId"}]},
                                        null
                                    ]},
                                    { "if": [
                                        {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.RtrRsnInf.Rsn.Cd"},
                                        {"cat": ["/REAS/", {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.RtrRsnInf.Rsn.Cd"}]},
                                        null
                                    ]},
                                    { "if": [
                                        {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.RtrRsnInf.AddtlInf"},
                                        {"map": [
                                            {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.RtrRsnInf.AddtlInf"},
                                            {"cat": ["/INFO/", {"var": ""}]}
                                        ]},
                                        null
                                    ]}
                                ]}
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "map_field_77b",
            "name": "Map Field 77B - Country of Residence",
            "description": "TR023: Map debtor and creditor country of residence",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [{
                        "path": "data.SwiftMT.fields.77B",
                        "logic": {
                            "narrative": {
                                "filter": [
                                    [
                                        { "if": [
                                            {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.RtrChain.Dbtr.Pty.CtryOfRes"},
                                            {"cat": ["/ORDERRES/", {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.RtrChain.Dbtr.Pty.CtryOfRes"}]},
                                            null
                                        ]},
                                        { "if": [
                                            {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.RtrChain.Cdtr.Pty.CtryOfRes"},
                                            {"cat": ["/BENEFRES/", {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.RtrChain.Cdtr.Pty.CtryOfRes"}]},
                                            null
                                        ]}
                                    ],
                                    {"var": ""}
                                ]
                            }
                        }
                    }]
                }
            }
        }
    ]
}