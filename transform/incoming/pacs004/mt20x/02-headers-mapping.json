{
    "id": "pacs004-mt20x-headers-mapping",
    "name": "PACS.004 to MT202/205 RETN Headers Mapping",
    "description": "Maps SWIFT message headers (blocks 1, 2, 3) for MT202/205 RETN",
    "priority": 4,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "pacs.004"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "pacs004-mt20x-preconditions"]},
        {"==": [{"var": "metadata.progress.task_id"}, "validate_transaction_count"]},
        {"in": [{"var": "metadata.SwiftMT.message_type"}, ["202", "205"]]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_headers",
            "name": "Map SWIFT Headers",
            "description": "Map blocks 1, 2, 3",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.basic_header",
                            "logic": {
                                "application_id": "F",
                                "service_id": "01",
                                "logical_terminal": {"cat": [{"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}, "AXXX"]},
                                "session_number": "0000",
                                "sequence_number": "000000",
                                "sender_bic": {"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}
                            }
                        },
                        {
                            "path": "data.SwiftMT.application_header",
                            "logic": {
                                "direction": "I",
                                "message_type": {"var": "data.SwiftMT.message_type"},
                                "priority": "N",
                                "destination_address": {"cat": [{"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}, "AXXX"]},
                                "receiver_bic": {"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}
                            }
                        },
                        {
                            "path": "data.SwiftMT.user_header",
                            "logic": {
                                "unique_end_to_end_reference": {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.OrgnlUETR"},
                                "service_type_identifier": { "if": [
                                    {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.OrgnlTxRef.PmtTpInf.SvcLvl.Cd"},
                                    { "if": [
                                        {"in": [{"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.OrgnlTxRef.PmtTpInf.SvcLvl.Cd"}, ["G001", "G002", "G003", "G004"]]},
                                        {"substr": [{"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.OrgnlTxRef.PmtTpInf.SvcLvl.Cd"}, 2, 3]},
                                        null
                                    ]},
                                    null
                                ]}
                            }
                        }
                    ]
                }
            }
        }
    ]
}