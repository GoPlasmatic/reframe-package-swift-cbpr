{
    "id": "pacs004-mt20x-field72-mapping",
    "name": "PACS.004 to MT202/205 RETN Field 72 Mapping",
    "description": "Maps return information to Field 72 (Sender to Receiver Information)",
    "priority": 8,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "pacs.004"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "pacs004-mt20x-agent-fields-mapping"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_field_58"]},
        {"in": [{"var": "metadata.SwiftMT.message_type"}, ["202", "205"]]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_field_72",
            "name": "Map Field 72 - Sender to Receiver Information",
            "description": "Map return information including /RETN/, /MREF/, /TREF/, /REAS/, /INFO/, /CHGS/",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#72",
                            "logic": {
                                "information": [
                                    "/RETN/",
                                    { "if": [
                                        {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.OrgnlEndToEndId"},
                                        {"cat": ["/TREF/", {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.OrgnlEndToEndId"}]},
                                        null
                                    ]},
                                    { "if": [
                                        {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.RtrRsnInf.Rsn.Cd"},
                                        {"cat": ["/REAS/", {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.RtrRsnInf.Rsn.Cd"}]},
                                        null
                                    ]},
                                    { "if": [
                                        {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.RtrRsnInf.AddtlInf.0"},
                                        {"cat": ["/INFO/", {"var": "data.ISO20022_MX.Document.PmtRtr.TxInf.RtrRsnInf.AddtlInf.0"}]},
                                        null
                                    ]}
                                ]
                            }
                        }
                    ]
                }
            }
        }
    ]
}