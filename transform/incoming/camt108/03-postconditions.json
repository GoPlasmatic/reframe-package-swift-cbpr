{
    "id": "camt108-postconditions",
    "name": "camt.108 to MT111 Postconditions",
    "description": "Validates postconditions and generates MT111 message",
    "priority": 5,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.108"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "camt108-to-mt111-mapping"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_mt111_structure"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "validate_postconditions",
            "name": "Validate Postconditions",
            "description": "Validate MT111 postconditions per CBPR+ specification",
            "function": {
                "name": "validate",
                "input": {
                    "rules": [
                        {
                            "path": "data",
                            "message": "Field 20 (Sender's Reference) is required",
                            "logic": {"!!": {"var": "data.SwiftMT.fields.20"}}
                        },
                        {
                            "path": "data",
                            "message": "Field 21 (Cheque Number) is required",
                            "logic": {"!!": {"var": "data.SwiftMT.fields.21"}}
                        },
                        {
                            "path": "data",
                            "message": "Field 30 (Issue Date) is required",
                            "logic": {"!!": {"var": "data.SwiftMT.fields.30"}}
                        },
                        {
                            "path": "data",
                            "message": "Either Field 32A or 32B must be present",
                            "logic": { "or": [
                                {"!!": {"var": "data.SwiftMT.fields.32A"}},
                                {"!!": {"var": "data.SwiftMT.fields.32B"}}
                            ]}
                        },
                        {
                            "path": "data",
                            "message": "Field 75 (Stop/Cancellation Reason) is required",
                            "logic": {"!!": {"var": "data.SwiftMT.fields.75"}}
                        }
                    ]
                }
            }
        },
        {
            "id": "generate_mt111",
            "name": "Generate MT111",
            "description": "Generate the final MT111 message",
            "condition": { "and": [
                {"==": [{"var": "metadata.progress.workflow_id"}, "camt108-postconditions"]},
                {"==": [{"var": "metadata.progress.task_id"}, "validate_postconditions"]},
                {"==": [{"var": "metadata.progress.status_code"}, 200]}
            ]},
            "function": {"name": "publish_mt", "input": {"source": "SwiftMT", "target": "result"}}
        }
    ]
}
