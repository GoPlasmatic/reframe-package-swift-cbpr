{
    "id": "pacs003-mandatory-fields-mapping",
    "name": "pacs.003 to MT104 Mandatory Fields Mapping",
    "description": "Maps mandatory fields from pacs.003 to MT104 Sequence A and B",
    "priority": 5,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "pacs.003"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "pacs003-headers-mapping"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_user_header"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_sequence_a_mandatory",
            "name": "Map Sequence A Mandatory Fields",
            "description": "Maps field 20 (Sender's Reference) and field 30 (Requested Execution Date)",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#20",
                            "logic": {
                                "reference": { "if": [
                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrDrctDbt.DrctDbtTxInf.PmtId.InstrId"},
                                    {
                                        "substr": [
                                            {"var": "data.ISO20022_MX.Document.FIToFICstmrDrctDbt.DrctDbtTxInf.PmtId.InstrId"},
                                            0,
                                            16
                                        ]
                                    },
                                    "NOTPROVIDED"
                                ]}
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.#30",
                            "logic": {
                                "execution_date": { "if": [
                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrDrctDbt.DrctDbtTxInf.ReqdColltnDt"},
                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrDrctDbt.DrctDbtTxInf.ReqdColltnDt"},
                                    { "if": [
                                        {"var": "data.ISO20022_MX.Document.FIToFICstmrDrctDbt.DrctDbtTxInf.IntrBkSttlmDt"},
                                        {"var": "data.ISO20022_MX.Document.FIToFICstmrDrctDbt.DrctDbtTxInf.IntrBkSttlmDt"},
                                        "1999-12-31"
                                    ]}
                                ]}
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "initialize_transactions",
            "name": "Initialize Transactions Array",
            "description": "Creates the transactions array structure for MT104",
            "function": {
                "name": "map",
                "input": {"mappings": [{"path": "data.SwiftMT.fields.##", "logic": [{}]}]}
            }
        },
        {
            "id": "map_transaction_fields",
            "name": "Map Transaction Fields",
            "description": "Maps mandatory transaction fields including field 21 and 32B",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.##.0.#21",
                            "logic": {
                                "reference": { "if": [
                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrDrctDbt.DrctDbtTxInf.PmtId.TxId"},
                                    {
                                        "substr": [
                                            {"var": "data.ISO20022_MX.Document.FIToFICstmrDrctDbt.DrctDbtTxInf.PmtId.TxId"},
                                            0,
                                            16
                                        ]
                                    },
                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrDrctDbt.DrctDbtTxInf.PmtId.InstrId"}
                                ]}
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.##.0.#32B",
                            "logic": {
                                "currency": {"var": "data.ISO20022_MX.Document.FIToFICstmrDrctDbt.DrctDbtTxInf.IntrBkSttlmAmt.@Ccy"},
                                "amount": {"var": "data.ISO20022_MX.Document.FIToFICstmrDrctDbt.DrctDbtTxInf.IntrBkSttlmAmt.$value"}
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.#32B",
                            "logic": {
                                "currency": {"var": "data.ISO20022_MX.Document.FIToFICstmrDrctDbt.DrctDbtTxInf.IntrBkSttlmAmt.@Ccy"},
                                "amount": {"var": "data.ISO20022_MX.Document.FIToFICstmrDrctDbt.DrctDbtTxInf.IntrBkSttlmAmt.$value"}
                            }
                        }
                    ]
                }
            }
        }
    ]
}
