{
    "id": "pacs003-optional-fields-mapping",
    "name": "pacs.003 to MT104 Optional Fields Mapping",
    "description": "Maps optional fields including direct debit specific fields, charges, and instruction codes",
    "priority": 8,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "pacs.003"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "pacs003-agent-fields-mapping"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_amount_fields_optional",
            "name": "Map Optional Amount Fields",
            "description": "Maps field 33B (InstructedAmount) and field 36 (Exchange Rate)",
            "function": {"name": "map", "input": {"mappings": []}}
        },
        {
            "id": "map_charges",
            "name": "Map Charges Fields",
            "description": "Maps ChargeBearer to field 71A and ChargesInformation to fields 71F and 71G",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.##.0.#71A",
                            "logic": {
                                "code": { "if": [
                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrDrctDbt.DrctDbtTxInf.ChrgBr"},
                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrDrctDbt.DrctDbtTxInf.ChrgBr"},
                                    null
                                ]}
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "map_instruction_code",
            "name": "Map Instruction Code Field 23E",
            "description": "Maps LocalInstrument to field 23E",
            "condition": {"var": "data.ISO20022_MX.Document.FIToFICstmrDrctDbt.DrctDbtTxInf.PmtTpInf.LclInstrm"},
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.##.0.23E",
                            "logic": {
                                "instruction_code": { "if": [
                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrDrctDbt.DrctDbtTxInf.PmtTpInf.LclInstrm.Cd"},
                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrDrctDbt.DrctDbtTxInf.PmtTpInf.LclInstrm.Cd"},
                                    { "if": [
                                        {"var": "data.ISO20022_MX.Document.FIToFICstmrDrctDbt.DrctDbtTxInf.PmtTpInf.LclInstrm.Prtry"},
                                        {
                                            "cat": [
                                                "OTHR/",
                                                {
                                                    "substr": [
                                                        {"var": "data.ISO20022_MX.Document.FIToFICstmrDrctDbt.DrctDbtTxInf.PmtTpInf.LclInstrm.Prtry"},
                                                        0,
                                                        30
                                                    ]
                                                }
                                            ]
                                        },
                                        null
                                    ]}
                                ]}
                            }
                        }
                    ]
                }
            }
        }
    ]
}
