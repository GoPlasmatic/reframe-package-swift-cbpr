{
    "id": "pacs008-to-mt103-instruction-fields",
    "name": "pacs.008 to MT103 Instruction Fields Mapping",
    "description": "Maps sender-to-receiver information including Field 72 (Sender to Receiver Information)",
    "priority": 11,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "pacs.008"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "pacs008-to-mt103-remittance-fields"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_remittance_information"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_instruction_codes",
            "name": "Map Instruction Codes",
            "description": "Map Field 23E (Instruction Code) from ServiceLevel, CategoryPurpose, and InstructionForCreditorAgent",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#23E",
                            "logic": { "if": [
                                { "and": [
                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.PmtTpInf.CtgyPurp.Cd"},
                                    {
                                        "in": [
                                            {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.PmtTpInf.CtgyPurp.Cd"},
                                            ["INTC", "CORT"]
                                        ]
                                    }
                                ]},
                                [
                                    {"instruction_code": {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.PmtTpInf.CtgyPurp.Cd"}}
                                ],
                                null
                            ]}
                        }
                    ]
                }
            }
        },
        {
            "id": "map_creditor_agent_instructions",
            "name": "Map Creditor Agent Instructions",
            "description": "Map Field 72 from InstructionForCreditorAgent codes (HOLD, CHQB, PHOB, TELB)",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "temp_data.field_72_info",
                            "logic": {
                                "filter": [
                                    [
                                        { "if": [
                                            {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.SvcLvl.0.Cd"},
                                            {"cat": ["/ACC/CBPR+ COMPLIANT"]},
                                            null
                                        ]},
                                        { "if": [
                                            {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.InstrForCdtrAgt.0.InstrInf"},
                                            {
                                                "cat": [
                                                    "/INS/",
                                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.InstrForCdtrAgt.0.InstrInf"}
                                                ]
                                            },
                                            null
                                        ]},
                                        { "if": [
                                            {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.InstrForCdtrAgt.1.InstrInf"},
                                            {
                                                "cat": [
                                                    "/INS/",
                                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.InstrForCdtrAgt.1.InstrInf"}
                                                ]
                                            },
                                            null
                                        ]}
                                    ],
                                    {"!=": [{"var": ""}, null]}
                                ]
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.#72",
                            "logic": { "if": [
                                {"var": "temp_data.field_72_info"},
                                {"information": {"var": "temp_data.field_72_info"}},
                                null
                            ]}
                        }
                    ]
                }
            }
        }
    ]
}
