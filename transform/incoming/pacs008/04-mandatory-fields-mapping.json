{
    "id": "pacs008-to-mt103-mandatory-fields",
    "name": "pacs.008 to MT103 Mandatory Fields Mapping",
    "description": "Maps mandatory MT103 fields including Field 20 (Sender's Reference), Field 23B (Bank Operation Code), and Field 32A (Value Date/Currency/Interbank Settled Amount)",
    "priority": 5,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "pacs.008"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "pacs008-to-mt103-headers"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_user_header"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_mandatory_fields",
            "name": "Map Mandatory MT103 Fields",
            "description": "Map Field 20 (InstructionIdentification - TR001), Field 23B (default CRED), and Field 32A (InterbankSettlementAmount and Date - TR012)",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#20",
                            "logic": {
                                "reference": { "if": [
                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.PmtId.InstrId"},
                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.PmtId.InstrId"},
                                    "NOTPROVIDED"
                                ]}
                            }
                        },
                        {"path": "data.SwiftMT.fields.#23B", "logic": {"instruction_code": "CRED"}},
                        {
                            "path": "data.SwiftMT.fields.#32A",
                            "logic": {
                                "value_date": {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.IntrBkSttlmDt"},
                                "currency": {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.IntrBkSttlmAmt.@Ccy"},
                                "amount": {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.IntrBkSttlmAmt.$value"}
                            }
                        }
                    ]
                }
            }
        }
    ]
}
