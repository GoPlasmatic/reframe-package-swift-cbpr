{
    "id": "pacs008-to-mt103-remittance-fields",
    "name": "pacs.008 to MT103 Remittance Information Mapping",
    "description": "Maps remittance information to Field 70 (Remittance Information) with EndToEndId handling per specification",
    "priority": 10,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "pacs.008"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "pacs008-to-mt103-agent-fields"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_account_with_institution"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_remittance_information",
            "name": "Map Remittance Information",
            "description": "Map remittance information to Field 70 with EndToEndId as /ROC/ reference when present",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#70",
                            "logic": {
                                "narrative": {
                                    "filter": [
                                        [
                                            { "if": [
                                                {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Purp.Cd"},
                                                {
                                                    "cat": [
                                                        "/PURP/",
                                                        {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Purp.Cd"}
                                                    ]
                                                },
                                                null
                                            ]},
                                            { "if": [
                                                {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.RmtInf.Strd.RfrdDocInf.Nb"},
                                                {
                                                    "cat": [
                                                        "/INV/",
                                                        {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.RmtInf.Strd.RfrdDocInf.Nb"}
                                                    ]
                                                },
                                                null
                                            ]},
                                            { "if": [
                                                { "and": [
                                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.PmtId.EndToEndId"},
                                                    {"!=": [{"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.PmtId.EndToEndId"}, "NOTPROVIDED"]}
                                                ]},
                                                {
                                                    "cat": [
                                                        "/RFB/",
                                                        {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.PmtId.EndToEndId"}
                                                    ]
                                                },
                                                null
                                            ]},
                                            { "if": [
                                                {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.RmtInf.Ustrd"},
                                                {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.RmtInf.Ustrd"},
                                                null
                                            ]},
                                            {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.RmtInf.Strd.AddtlRmtInf.0"},
                                            {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.RmtInf.Strd.AddtlRmtInf.1"}
                                        ],
                                        {"!=": [{"var": ""}, null]}
                                    ]
                                }
                            }
                        }
                    ]
                }
            }
        }
    ]
}
