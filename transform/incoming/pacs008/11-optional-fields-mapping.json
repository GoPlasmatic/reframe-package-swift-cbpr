{
    "id": "pacs008-to-mt103-optional-fields",
    "name": "pacs.008 to MT103 Optional Fields Mapping",
    "description": "Maps optional fields including Field 77B (Regulatory Reporting) and other miscellaneous optional fields",
    "priority": 12,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "pacs.008"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "pacs008-to-mt103-instruction-fields"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_creditor_agent_instructions"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_regulatory_reporting",
            "name": "Map Regulatory Reporting",
            "description": "Map Field 77B (Regulatory Reporting) from RegulatoryReporting information per MX_To_MTRegulatoryReporting2 function - maps Type, Code, and Information fields",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "temp_data.field_77b_narrative",
                            "logic": {
                                "filter": [
                                    [
                                        { "if": [
                                            {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Dbtr.CtryOfRes"},
                                            {
                                                "cat": [
                                                    "/DEBTORRES/",
                                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Dbtr.CtryOfRes"}
                                                ]
                                            },
                                            null
                                        ]},
                                        { "if": [
                                            {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Cdtr.CtryOfRes"},
                                            {
                                                "cat": [
                                                    "/CREDITORRES/",
                                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Cdtr.CtryOfRes"}
                                                ]
                                            },
                                            null
                                        ]},
                                        { "if": [
                                            {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.RgltryRptg.Dtls.Ctry"},
                                            {
                                                "cat": [
                                                    "/REGCOUNTRY/",
                                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.RgltryRptg.Dtls.Ctry"}
                                                ]
                                            },
                                            null
                                        ]},
                                        {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.RgltryRptg.Dtls.Inf"}
                                    ],
                                    {"!=": [{"var": ""}, null]}
                                ]
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.#77B",
                            "logic": { "if": [
                                {"var": "temp_data.field_77b_narrative"},
                                {"narrative": {"var": "temp_data.field_77b_narrative"}},
                                null
                            ]}
                        }
                    ]
                }
            }
        }
    ]
}
