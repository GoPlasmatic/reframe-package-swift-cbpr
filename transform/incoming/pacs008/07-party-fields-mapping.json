{
    "id": "pacs008-to-mt103-party-fields",
    "name": "pacs.008 to MT103 Party Fields Mapping",
    "description": "Maps customer party information including Field 50K (Ordering Customer - TR026) and Field 59 (Beneficiary Customer - TR025)",
    "priority": 8,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "pacs.008"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "pacs008-to-mt103-charge-fields"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_receivers_charges"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_ordering_customer",
            "name": "Map Ordering Customer",
            "description": "Map Field 50K (Ordering Customer) from Debtor information including account and name/address (TR026)",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.50K",
                            "logic": { "if": [
                                {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Dbtr.Nm"},
                                {
                                    "account": { "if": [
                                        {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.DbtrAcct.Id.IBAN"},
                                        {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.DbtrAcct.Id.IBAN"},
                                        { "if": [
                                            {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.DbtrAcct.Id.Othr.Id"},
                                            {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.DbtrAcct.Id.Othr.Id"},
                                            null
                                        ]}
                                    ]},
                                    "name_and_address": {
                                        "filter": [
                                            [
                                                {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Dbtr.Nm"},
                                                { "if": [
                                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Dbtr.Id.OrgId.LEI"},
                                                    {
                                                        "cat": [
                                                            "/LEI",
                                                            {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Dbtr.Id.OrgId.LEI"}
                                                        ]
                                                    },
                                                    null
                                                ]},
                                                { "if": [
                                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Dbtr.PstlAdr.AdrLine.0"},
                                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Dbtr.PstlAdr.AdrLine.0"},
                                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Dbtr.PstlAdr.StrtNm"}
                                                ]},
                                                { "if": [
                                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Dbtr.PstlAdr.AdrLine.1"},
                                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Dbtr.PstlAdr.AdrLine.1"},
                                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Dbtr.PstlAdr.TwnNm"}
                                                ]},
                                                {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Dbtr.PstlAdr.Ctry"}
                                            ],
                                            {"!=": [{"var": ""}, null]}
                                        ]
                                    }
                                },
                                null
                            ]}
                        }
                    ]
                }
            }
        },
        {
            "id": "map_beneficiary_customer",
            "name": "Map Beneficiary Customer",
            "description": "Map Field 59 (Beneficiary Customer) from Creditor information including account and name/address (TR025)",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.59",
                            "logic": { "if": [
                                {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Cdtr.Nm"},
                                {
                                    "account": { "if": [
                                        {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.CdtrAcct.Id.IBAN"},
                                        {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.CdtrAcct.Id.IBAN"},
                                        { "if": [
                                            { "and": [
                                                {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.CdtrAcct.Id.Othr.Id"},
                                                {"!=": [{"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.CdtrAcct.Id.Othr.Id"}, "NOTPROVIDED"]}
                                            ]},
                                            {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.CdtrAcct.Id.Othr.Id"},
                                            null
                                        ]}
                                    ]},
                                    "name_and_address": {
                                        "filter": [
                                            [
                                                {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Cdtr.Nm"},
                                                { "if": [
                                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Cdtr.Id.OrgId.LEI"},
                                                    {
                                                        "cat": [
                                                            "/LEI",
                                                            {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Cdtr.Id.OrgId.LEI"}
                                                        ]
                                                    },
                                                    null
                                                ]},
                                                { "if": [
                                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Cdtr.PstlAdr.AdrLine.0"},
                                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Cdtr.PstlAdr.AdrLine.0"},
                                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Cdtr.PstlAdr.StrtNm"}
                                                ]},
                                                { "if": [
                                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Cdtr.PstlAdr.AdrLine.1"},
                                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Cdtr.PstlAdr.AdrLine.1"},
                                                    {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Cdtr.PstlAdr.TwnNm"}
                                                ]},
                                                {"var": "data.ISO20022_MX.Document.FIToFICstmrCdtTrf.CdtTrfTxInf.Cdtr.PstlAdr.Ctry"}
                                            ],
                                            {"!=": [{"var": ""}, null]}
                                        ]
                                    }
                                },
                                null
                            ]}
                        }
                    ]
                }
            }
        }
    ]
}
