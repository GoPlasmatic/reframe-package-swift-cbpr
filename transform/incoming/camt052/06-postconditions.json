{
    "id": "camt052-postconditions",
    "name": "camt.052 to MT942 Postconditions",
    "description": "Applies postconditions per specification (POSTC001-003) and generates MT942",
    "priority": 7,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.052"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "camt052-transaction-fields-mapping"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "validate_final_message",
            "name": "Validate Final MT942 Message",
            "description": "Validates the generated MT942 message structure",
            "function": {
                "name": "validate",
                "input": {
                    "rules": [
                        {
                            "path": "data.SwiftMT.fields.20",
                            "logic": {"exists": ["data", "SwiftMT", "fields", "20"]},
                            "message": "T20115: Field 20 is mandatory for MT942"
                        },
                        {
                            "path": "data.SwiftMT.fields.25",
                            "logic": {"exists": ["data", "SwiftMT", "fields", "25"]},
                            "message": "T20116: Field 25 is mandatory for MT942"
                        },
                        {
                            "path": "data.SwiftMT.fields.28C",
                            "logic": {"exists": ["data", "SwiftMT", "fields", "28C"]},
                            "message": "T20117: Field 28C is mandatory for MT942"
                        },
                        {
                            "path": "data.SwiftMT.fields.34F_debit",
                            "logic": {"exists": ["data", "SwiftMT", "fields", "34F_debit"]},
                            "message": "T20123: Field 34F (debit floor limit) is mandatory for MT942"
                        },
                        {
                            "path": "data.SwiftMT.fields.13D",
                            "logic": {"exists": ["data", "SwiftMT", "fields", "13D"]},
                            "message": "T20118: Field 13D is mandatory for MT942"
                        }
                    ]
                }
            }
        },
        {
            "id": "generate_mt942",
            "name": "Generate MT942",
            "description": "Generate the final MT942 message",
            "function": {"name": "publish_mt", "input": {"source": "SwiftMT", "target": "result"}}
        }
    ]
}
