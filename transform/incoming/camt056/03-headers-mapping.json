{
    "id": "camt056-headers-mapping",
    "name": "camt.056 to MT192/MT292 Headers Mapping",
    "description": "Maps SWIFT headers from BAH per specification",
    "priority": 4,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.056"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "camt056-preconditions"]},
        {"==": [{"var": "metadata.progress.task_id"}, "validate_preconditions"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_swift_headers",
            "name": "Map SWIFT Headers",
            "description": "Maps all SWIFT header blocks for MT192/MT292",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.basic_header",
                            "logic": {
                                "application_id": "F",
                                "service_id": "01",
                                "sender_bic": {"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"},
                                "logical_terminal": {"cat": [{"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}, "AXXX"]},
                                "session_number": "0000",
                                "sequence_number": "000000"
                            }
                        },
                        {
                            "path": "data.SwiftMT.application_header",
                            "logic": {
                                "direction": "I",
                                "message_type": {"var": "data.SwiftMT.message_type"},
                                "destination_address": {"cat": [{"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}, "AXXX"]},
                                "receiver_bic": {"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"},
                                "priority": "N"
                            }
                        },
                        {
                            "path": "data.SwiftMT.user_header",
                            "logic": {"unique_end_to_end_reference": {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlUETR"}}
                        }
                    ]
                }
            }
        }
    ]
}
