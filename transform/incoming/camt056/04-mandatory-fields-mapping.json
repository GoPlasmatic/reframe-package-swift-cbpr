{
    "id": "camt056-mandatory-fields-mapping",
    "name": "camt.056 to MT192/MT292 Mandatory Fields Mapping",
    "description": "Maps mandatory fields per specification (TR001-TR004)",
    "priority": 5,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.056"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "camt056-headers-mapping"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_swift_headers"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_field_20",
            "name": "Map Transaction Reference (Field 20)",
            "description": "Maps Case/Identification per TR001",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#20",
                            "logic": {
                                "reference": { "if": [
                                    {">": [{"length": {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.Case.Id"}}, 16]},
                                    {
                                        "cat": [
                                            {
                                                "substr": [{"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.Case.Id"}, 0, 15]
                                            },
                                            "+"
                                        ]
                                    },
                                    { "if": [
                                        { "or": [
                                            {"starts_with": [{"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.Case.Id"}, "/"]},
                                            {"ends_with": [{"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.Case.Id"}, "/"]},
                                            {"in": ["//", {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.Case.Id"}]}
                                        ]},
                                        "NOTPROVIDED",
                                        {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.Case.Id"}
                                    ]}
                                ]}
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "map_field_21",
            "name": "Map Related Reference (Field 21)",
            "description": "Maps OriginalInstructionIdentification per TR002",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#21",
                            "logic": {
                                "reference": { "if": [
                                    {">": [{"length": {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlInstrId"}}, 16]},
                                    {
                                        "cat": [
                                            {
                                                "substr": [
                                                    {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlInstrId"},
                                                    0,
                                                    15
                                                ]
                                            },
                                            "+"
                                        ]
                                    },
                                    { "if": [
                                        { "or": [
                                            {
                                                "starts_with": [
                                                    {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlInstrId"},
                                                    "/"
                                                ]
                                            },
                                            {
                                                "ends_with": [
                                                    {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlInstrId"},
                                                    "/"
                                                ]
                                            },
                                            {
                                                "in": [
                                                    "//",
                                                    {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlInstrId"}
                                                ]
                                            }
                                        ]},
                                        "NOTPROVIDED",
                                        {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlInstrId"}
                                    ]}
                                ]}
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "map_field_11S",
            "name": "Map MT and Date (Field 11S)",
            "description": "Maps original message type and date per TR003",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#11S",
                            "logic": {
                                "message_type": { "if": [
                                    {
                                        "in": [
                                            "pacs.008",
                                            {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlGrpInf.OrgnlMsgNmId"}
                                        ]
                                    },
                                    "103",
                                    { "if": [
                                        {
                                            "in": [
                                                "pacs.003",
                                                {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlGrpInf.OrgnlMsgNmId"}
                                            ]
                                        },
                                        "104",
                                        { "if": [
                                            { "and": [
                                                {
                                                    "starts_with": [
                                                        {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlGrpInf.OrgnlMsgNmId"},
                                                        "MT10"
                                                    ]
                                                },
                                                {"==": [{"length": {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlGrpInf.OrgnlMsgNmId"}}, 5]}
                                            ]},
                                            {
                                                "substr": [
                                                    {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlGrpInf.OrgnlMsgNmId"},
                                                    3,
                                                    3
                                                ]
                                            },
                                            { "if": [
                                                {
                                                    "in": [
                                                        "pacs.009",
                                                        {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlGrpInf.OrgnlMsgNmId"}
                                                    ]
                                                },
                                                "202",
                                                { "if": [
                                                    {
                                                        "in": [
                                                            "pacs.010",
                                                            {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlGrpInf.OrgnlMsgNmId"}
                                                        ]
                                                    },
                                                    "204",
                                                    { "if": [
                                                        { "and": [
                                                            {
                                                                "starts_with": [
                                                                    {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlGrpInf.OrgnlMsgNmId"},
                                                                    "MT20"
                                                                ]
                                                            },
                                                            {"==": [{"length": {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlGrpInf.OrgnlMsgNmId"}}, 5]}
                                                        ]},
                                                        {
                                                            "substr": [
                                                                {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlGrpInf.OrgnlMsgNmId"},
                                                                3,
                                                                3
                                                            ]
                                                        },
                                                        "202"
                                                    ]}
                                                ]}
                                            ]}
                                        ]}
                                    ]}
                                ]},
                                "date": { "if": [
                                    {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlGrpInf.OrgnlCreDtTm"},
                                    {
                                        "substr": [
                                            {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlGrpInf.OrgnlCreDtTm"},
                                            0,
                                            10
                                        ]
                                    },
                                    "9999-12-31"
                                ]}
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "map_field_32A",
            "name": "Map Settlement Amount (Field 32A)",
            "description": "Maps original interbank settlement amount per TR004",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#32A",
                            "logic": {
                                "value_date": {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlIntrBkSttlmDt"},
                                "currency": {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlIntrBkSttlmAmt.@Ccy"},
                                "amount": {"var": "data.ISO20022_MX.Document.FIToFIPmtCxlReq.Undrlyg.TxInf.OrgnlIntrBkSttlmAmt.$value"}
                            }
                        }
                    ]
                }
            }
        }
    ]
}
