{
    "id": "camt105-variant-detection",
    "name": "camt.105 Variant Detection for MTn90",
    "description": "Detects and prepares camt.105 for transformation to MT190/MT290 per CBPR+ specification",
    "priority": 2,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.105"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "mx-parser"]},
        {"==": [{"var": "metadata.progress.task_id"}, "parse_mx_message"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "determine_mt_variant",
            "name": "Determine MT Variant (PREC004)",
            "description": "Determines MT190 or MT290 based on underlying transaction type per CBPR+ PREC004",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.message_type",
                            "logic": { "if": [
                                { "or": [
                                    {
                                        "starts_with": [
                                            {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.Chrgs.PerTx.Rcrd.UndrlygTx.MsgNmId"},
                                            "pacs.008"
                                        ]
                                    },
                                    {
                                        "starts_with": [
                                            {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.Chrgs.PerTx.Rcrd.UndrlygTx.MsgNmId"},
                                            "MT103"
                                        ]
                                    }
                                ]},
                                "190",
                                "290"
                            ]}
                        }
                    ]
                }
            }
        }
    ]
}
