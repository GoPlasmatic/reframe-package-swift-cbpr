{
    "id": "camt105-mandatory-fields-mapping",
    "name": "camt.105 to MTn90 Mandatory Fields Mapping",
    "description": "Maps mandatory fields per CBPR+ specification including references, account, and charges",
    "priority": 5,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.105"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "camt105-headers-mapping"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_swift_headers"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_mandatory_fields",
            "name": "Map All Mandatory Fields",
            "description": "Maps fields 20, 21, 25, 32C/D, and 52 per CBPR+ specification",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#20",
                            "logic": {
                                "reference": {
                                    "substr": [
                                        {"replace": [{"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.Chrgs.PerTx.ChrgsId"}, "-", ""]},
                                        0,
                                        16
                                    ]
                                }
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.#21",
                            "logic": {
                                "reference": {
                                    "substr": [
                                        {
                                            "replace": [
                                                { "if": [
                                                    {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.Chrgs.PerTx.Rcrd.UndrlygTx.InstrId"},
                                                    {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.Chrgs.PerTx.Rcrd.UndrlygTx.InstrId"},
                                                    { "if": [
                                                        {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.Chrgs.PerTx.Rcrd.UndrlygTx.EndToEndId"},
                                                        {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.Chrgs.PerTx.Rcrd.UndrlygTx.EndToEndId"},
                                                        { "if": [
                                                            {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.Chrgs.PerTx.Rcrd.UndrlygTx.MsgId"},
                                                            {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.Chrgs.PerTx.Rcrd.UndrlygTx.MsgId"},
                                                            { "if": [
                                                                {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.Chrgs.PerTx.Rcrd.UndrlygTx.AcctSvcrRef"},
                                                                {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.Chrgs.PerTx.Rcrd.UndrlygTx.AcctSvcrRef"},
                                                                "NOTPROVIDED"
                                                            ]}
                                                        ]}
                                                    ]}
                                                ]},
                                                "-",
                                                ""
                                            ]
                                        },
                                        0,
                                        16
                                    ]
                                }
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.#25",
                            "logic": {
                                "authorisation": { "if": [
                                    {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.GrpHdr.ChrgsAcct.Id.IBAN"},
                                    {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.GrpHdr.ChrgsAcct.Id.IBAN"},
                                    {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.GrpHdr.ChrgsAcct.Id.Othr.Id"}
                                ]}
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.32D",
                            "logic": {
                                "value_date": { "if": [
                                    {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.Chrgs.PerTx.Rcrd.ValDt.Dt"},
                                    {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.Chrgs.PerTx.Rcrd.ValDt.Dt"},
                                    {
                                        "substr": [
                                            {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.Chrgs.PerTx.Rcrd.ValDt.DtTm"},
                                            0,
                                            10
                                        ]
                                    }
                                ]},
                                "currency": {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.Chrgs.PerTx.Rcrd.TtlChrgsPerRcrd.TtlChrgsAmt.@Ccy"},
                                "amount": {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.Chrgs.PerTx.Rcrd.TtlChrgsPerRcrd.TtlChrgsAmt.$value"}
                            }
                        }
                    ]
                }
            }
        }
    ]
}
