{
    "id": "camt105-charges-breakdown-mapping",
    "name": "camt.105 to MTn90 Charges Breakdown Mapping",
    "description": "Maps charges breakdown to field 71B per CBPR+ specification",
    "priority": 6,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.105"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "camt105-mandatory-fields-mapping"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_mandatory_fields"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_field_71B",
            "name": "Map Field 71B Charges Breakdown",
            "description": "Maps up to 6 charges breakdown items to field 71B per specification",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#71B",
                            "logic": {
                                "details": {
                                    "map": [
                                        {
                                            "slice": [
                                                {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.Chrgs.PerTx.Rcrd.ChrgsBrkdwn"},
                                                0,
                                                6
                                            ]
                                        },
                                        {
                                            "cat": [
                                                {"var": "Amt.@Ccy"},
                                                {"var": "Amt.$value"},
                                                "/",
                                                { "if": [
                                                    {"var": "Tp.Cd"},
                                                    {"var": "Tp.Cd"},
                                                    "OTHR"
                                                ]},
                                                "/",
                                                { "if": [
                                                    {"==": [{"var": "CdtDbtInd"}, "CRDT"]},
                                                    "C",
                                                    "D"
                                                ]}
                                            ]
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                }
            }
        }
    ]
}
