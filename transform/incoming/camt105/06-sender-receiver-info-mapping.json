{
    "id": "camt105-sender-receiver-info-mapping",
    "name": "camt.105 to MTn90 Sender to Receiver Information Mapping",
    "description": "Maps charges requestor to field 72 per CBPR+ TR004/TR006",
    "priority": 7,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.105"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "camt105-charges-breakdown-mapping"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_field_71B"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_field_72",
            "name": "Map Field 72 Sender to Receiver Info (TR004/TR006)",
            "description": "Maps ChargesRequestor to field 72 with /CHRQ/ codeword per TR004/TR006",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#72",
                            "condition": {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.GrpHdr.ChrgsReqstr"},
                            "logic": {
                                "information": [
                                    {
                                        "cat": [
                                            "/CHRQ/",
                                            { "if": [
                                                {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.GrpHdr.ChrgsReqstr.FinInstnId.BICFI"},
                                                {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.GrpHdr.ChrgsReqstr.FinInstnId.BICFI"},
                                                { "if": [
                                                    {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.GrpHdr.ChrgsReqstr.FinInstnId.ClrSysMmbId.MmbId"},
                                                    {
                                                        "cat": [
                                                            "//",
                                                            {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.GrpHdr.ChrgsReqstr.FinInstnId.ClrSysMmbId.ClrSysId.Cd"},
                                                            {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.GrpHdr.ChrgsReqstr.FinInstnId.ClrSysMmbId.MmbId"}
                                                        ]
                                                    },
                                                    { "if": [
                                                        {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.GrpHdr.ChrgsReqstr.FinInstnId.Nm"},
                                                        {
                                                            "substr": [
                                                                {"var": "data.ISO20022_MX.Document.ChrgsPmtNtfctn.GrpHdr.ChrgsReqstr.FinInstnId.Nm"},
                                                                0,
                                                                29
                                                            ]
                                                        },
                                                        ""
                                                    ]}
                                                ]}
                                            ]}
                                        ]
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        }
    ]
}
