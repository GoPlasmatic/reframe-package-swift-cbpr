{
    "id": "camt105-postconditions",
    "name": "camt.105 to MTn90 Postconditions and Final Assembly",
    "description": "Performs final validation and assembles MT190/MT290 message per CBPR+ specification",
    "priority": 8,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.105"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        { "or": [
            { "and": [
                {"==": [{"var": "metadata.progress.workflow_id"}, "camt105-sender-receiver-info-mapping"]},
                {"==": [{"var": "metadata.progress.task_id"}, "map_field_72"]},
                {"==": [{"var": "metadata.progress.status_code"}, 200]}
            ]},
            { "and": [
                {"==": [{"var": "metadata.progress.workflow_id"}, "camt105-charges-breakdown-mapping"]},
                {"==": [{"var": "metadata.progress.task_id"}, "map_field_71B"]},
                {"==": [{"var": "metadata.progress.status_code"}, 200]}
            ]}
        ]}
    ]},
    "tasks": [
        {
            "id": "finalize_mtn90",
            "name": "Finalize MTn90 Message",
            "description": "Final assembly and validation of MT190/MT290 message per CBPR+ specification",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.message_variant",
                            "logic": { "if": [
                                {"==": [{"var": "data.SwiftMT.message_type"}, "190"]},
                                "MT190_CHARGES_ADVICE_CUSTOMER",
                                "MT290_CHARGES_ADVICE_FI"
                            ]}
                        },
                        {"path": "data.SwiftMT.transformation_complete", "logic": true}
                    ]
                }
            }
        }
    ]
}
