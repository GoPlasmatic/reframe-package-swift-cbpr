{
    "id": "camt105-preconditions",
    "name": "camt.105 to MTn90 Preconditions Validation",
    "description": "Validates preconditions for camt.105 to MT190/MT290 transformation per CBPR+ specification",
    "priority": 3,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.105"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "camt105-variant-detection"]},
        {"==": [{"var": "metadata.progress.task_id"}, "determine_mt_variant"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "validate_preconditions",
            "name": "Validate All Preconditions",
            "description": "Validates business service, single charge, and charges breakdown per CBPR+ PREC001-003",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.validation_errors",
                            "condition": {"==": [{"var": "data.ISO20022_MX.AppHdr.BizSvc"}, "swift.cbprplus.mlp.01"]},
                            "logic": {
                                "code": "T20287",
                                "message": "Multiple records not supported - 1 Record => 1 MT n91"
                            }
                        }
                    ]
                }
            }
        }
    ]
}
