{
    "id": "camt109-postconditions",
    "name": "camt.109 to MT112 Postconditions",
    "description": "Validates postconditions and generates MT112 message",
    "priority": 5,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.109"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "camt109-to-mt112-mapping"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_mt112_structure"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "validate_postconditions",
            "name": "Validate Postconditions",
            "description": "Validate MT112 postconditions per CBPR+ specification",
            "function": {
                "name": "validate",
                "input": {
                    "rules": [
                        {
                            "path": "data",
                            "message": "Field 20 (Sender's Reference) is required",
                            "logic": {"!!": {"var": "data.SwiftMT.fields.20"}}
                        },
                        {
                            "path": "data",
                            "message": "Field 21 (Cheque Number) is required",
                            "logic": {"!!": {"var": "data.SwiftMT.fields.21"}}
                        },
                        {
                            "path": "data",
                            "message": "Field 30 (Issue Date) is required",
                            "logic": {"!!": {"var": "data.SwiftMT.fields.30"}}
                        },
                        {
                            "path": "data",
                            "message": "Either Field 32A or 32B must be present",
                            "logic": { "or": [
                                {"!!": {"var": "data.SwiftMT.fields.32A"}},
                                {"!!": {"var": "data.SwiftMT.fields.32B"}}
                            ]}
                        },
                        {
                            "path": "data",
                            "message": "Field 76 (Status) is required",
                            "logic": {"!!": {"var": "data.SwiftMT.fields.76"}}
                        }
                    ]
                }
            }
        },
        {
            "id": "generate_mt112",
            "name": "Generate MT112",
            "description": "Generate the final MT112 message",
            "condition": { "and": [
                {"==": [{"var": "metadata.progress.workflow_id"}, "camt109-postconditions"]},
                {"==": [{"var": "metadata.progress.task_id"}, "validate_postconditions"]},
                {"==": [{"var": "metadata.progress.status_code"}, 200]}
            ]},
            "function": {"name": "publish_mt", "input": {"source": "SwiftMT", "target": "result"}}
        }
    ]
}
