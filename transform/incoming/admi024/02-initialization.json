{
    "id": "admi024-initialization",
    "name": "admi.024 to MT199 Initialization",
    "description": "Validates preconditions and maps SWIFT headers for MT199",
    "priority": 3,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "admi.024"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "admi024-variant-detection"]},
        {"==": [{"var": "metadata.progress.task_id"}, "set_target_message"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "validate_and_map_headers",
            "name": "Validate and Map Headers",
            "description": "Validates mandatory fields and maps all SWIFT headers",
            "function": {
                "name": "validate",
                "input": {
                    "rules": [
                        {
                            "logic": {"exists": ["data", "ISO20022_MX", "Document", "NtfctnOfCrspdc", "NtfctnData"]},
                            "message": "T20000: NotificationData is required for MT199 transformation"
                        },
                        {
                            "logic": {"exists": ["data", "ISO20022_MX", "Document", "NtfctnOfCrspdc", "NtfctnData", "SndrNtfctnId"]},
                            "message": "T20001: SenderNotificationIdentification is required for field 20"
                        },
                        {
                            "logic": {"exists": ["data", "ISO20022_MX", "Document", "NtfctnOfCrspdc", "NtfctnData", "NtfctnTp", "Cd"]},
                            "message": "T20002: NotificationType Code is required for field 79"
                        }
                    ]
                }
            }
        },
        {
            "id": "map_swift_headers",
            "name": "Map SWIFT Headers",
            "description": "Maps all SWIFT header blocks from BAH",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.basic_header",
                            "logic": {
                                "application_id": "F",
                                "service_id": "01",
                                "sender_bic": {"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"},
                                "logical_terminal": {"cat": [{"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}, "AXXX"]},
                                "session_number": "0000",
                                "sequence_number": "000000"
                            }
                        },
                        {
                            "path": "data.SwiftMT.application_header",
                            "logic": {
                                "direction": "I",
                                "message_type": "199",
                                "destination_address": {"cat": [{"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}, "AXXX"]},
                                "receiver_bic": {"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"},
                                "priority": "N"
                            }
                        },
                        {
                            "path": "data.SwiftMT.user_header",
                            "logic": {
                                "validation_flag": "STP",
                                "uetr": {"var": "data.ISO20022_MX.Document.NtfctnOfCrspdc.GrpHdr.MsgId"}
                            }
                        }
                    ]
                }
            }
        }
    ]
}
