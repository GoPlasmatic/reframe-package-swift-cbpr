{
    "id": "admi024-fields-mapping",
    "name": "admi.024 to MT199 Fields Mapping",
    "description": "Maps mandatory fields (20, 79) per specification",
    "priority": 4,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "admi.024"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "admi024-initialization"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_swift_headers"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_mandatory_fields",
            "name": "Map Mandatory Fields",
            "description": "Maps field 20 (Transaction Reference) and field 79 (Narrative)",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#20",
                            "logic": {
                                "reference": { "if": [
                                    { "or": [
                                        {"starts_with": [{"var": "data.ISO20022_MX.Document.NtfctnOfCrspdc.NtfctnData.SndrNtfctnId"}, "/"]},
                                        {"ends_with": [{"var": "data.ISO20022_MX.Document.NtfctnOfCrspdc.NtfctnData.SndrNtfctnId"}, "/"]},
                                        {
                                            "in": [
                                                "//",
                                                {"var": "data.ISO20022_MX.Document.NtfctnOfCrspdc.NtfctnData.SndrNtfctnId"}
                                            ]
                                        }
                                    ]},
                                    "NOTPROVIDED",
                                    { "if": [
                                        {">": [{"length": {"var": "data.ISO20022_MX.Document.NtfctnOfCrspdc.NtfctnData.SndrNtfctnId"}}, 16]},
                                        {
                                            "cat": [
                                                {
                                                    "substr": [
                                                        {"var": "data.ISO20022_MX.Document.NtfctnOfCrspdc.NtfctnData.SndrNtfctnId"},
                                                        0,
                                                        15
                                                    ]
                                                },
                                                "+"
                                            ]
                                        },
                                        {"var": "data.ISO20022_MX.Document.NtfctnOfCrspdc.NtfctnData.SndrNtfctnId"}
                                    ]}
                                ]}
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.#79",
                            "logic": {
                                "information": { "if": [
                                    {"var": "data.ISO20022_MX.Document.NtfctnOfCrspdc.NtfctnData.NtfctnTp.Cd"},
                                    {
                                        "slice": [
                                            {
                                                "cat": [
                                                    [
                                                        {
                                                            "cat": [
                                                                "/NTTP/",
                                                                {"var": "data.ISO20022_MX.Document.NtfctnOfCrspdc.NtfctnData.NtfctnTp.Cd"}
                                                            ]
                                                        }
                                                    ],
                                                    { "if": [
                                                        {"var": "data.ISO20022_MX.Document.NtfctnOfCrspdc.NtfctnData.NtfctnNrrtv"},
                                                        {
                                                            "map": [
                                                                {"var": "data.ISO20022_MX.Document.NtfctnOfCrspdc.NtfctnData.NtfctnNrrtv"},
                                                                { "if": [
                                                                    {"<=": [{"length": {"var": ""}}, 50]},
                                                                    {"var": ""},
                                                                    {
                                                                        "substr": [{"var": ""}, 0, 50]
                                                                    }
                                                                ]}
                                                            ]
                                                        },
                                                        []
                                                    ]}
                                                ]
                                            },
                                            0,
                                            35
                                        ]
                                    },
                                    ["/NTTP/NOTPROVIDED"]
                                ]}
                            }
                        }
                    ]
                }
            }
        }
    ]
}
