{
    "id": "admi024-variant-detection",
    "name": "admi.024 Variant Detection for MT199",
    "description": "Determines MT199 as target message type for admi.024 transformation",
    "priority": 2,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "admi.024"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "mx-parser"]},
        {"==": [{"var": "metadata.progress.task_id"}, "parse_mx_message"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "set_target_message",
            "name": "Set Target Message Type",
            "description": "Sets MT199 as target",
            "function": {
                "name": "map",
                "input": {"mappings": [{"path": "data.SwiftMT.message_type", "logic": "199"}]}
            }
        }
    ]
}
