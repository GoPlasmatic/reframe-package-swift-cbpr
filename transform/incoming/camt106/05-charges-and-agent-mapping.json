{
    "id": "camt106-charges-and-agent-mapping",
    "name": "camt.106 to MTn91 Charges Breakdown and Agent Mapping",
    "description": "Maps charges breakdown to Field 71B and agents to Field 52 per CBPR+ specification",
    "priority": 6,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.106"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "camt106-mandatory-fields-mapping"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_mandatory_fields"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_charges_breakdown",
            "name": "Map Charges Breakdown to Field 71B",
            "description": "Maps charges breakdown to Field 71B",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#71B",
                            "logic": {
                                "details": {
                                    "map": [
                                        {
                                            "slice": [
                                                {"var": "data.ISO20022_MX.Document.ChrgsPmtReq.Chrgs.PerTx.Rcrd.ChrgsBrkdwn"},
                                                0,
                                                6
                                            ]
                                        },
                                        {
                                            "cat": [
                                                {"var": "Amt.@Ccy"},
                                                {"var": "Amt.$value"},
                                                "/",
                                                { "if": [
                                                    {"var": "Tp.Cd"},
                                                    {"var": "Tp.Cd"},
                                                    "OTHR"
                                                ]},
                                                "/",
                                                { "if": [
                                                    {"==": [{"var": "CdtDbtInd"}, "CRDT"]},
                                                    "C",
                                                    "D"
                                                ]}
                                            ]
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "map_field_52A_from_group_header",
            "name": "Map Field 52A from Group Header",
            "description": "Maps Field 52A when BICFI exists in Group Header",
            "condition": { "and": [
                {"exists": ["data", "ISO20022_MX", "Document", "ChrgsPmtReq", "GrpHdr", "ChrgsAcctAgt", "FinInstnId", "BICFI"]},
                {"!": {"exists": ["data", "ISO20022_MX", "Document", "ChrgsPmtReq", "GrpHdr", "ChrgsAcctAgtAcct"]}}
            ]},
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.52A",
                            "logic": {"var": "data.ISO20022_MX.Document.ChrgsPmtReq.GrpHdr.ChrgsAcctAgt.FinInstnId.BICFI"}
                        }
                    ]
                }
            }
        },
        {
            "id": "map_field_52A_from_debtor_agent",
            "name": "Map Field 52A from Debtor Agent",
            "description": "Maps Field 52A when BICFI exists in Debtor Agent and not in Group Header",
            "condition": { "and": [
                {"!": {"exists": ["data", "ISO20022_MX", "Document", "ChrgsPmtReq", "GrpHdr", "ChrgsAcctAgt"]}},
                {"exists": ["data", "ISO20022_MX", "Document", "ChrgsPmtReq", "Chrgs", "PerTx", "Rcrd", "DbtrAgt", "FinInstnId", "BICFI"]},
                {"!": {"exists": ["data", "ISO20022_MX", "Document", "ChrgsPmtReq", "Chrgs", "PerTx", "Rcrd", "DbtrAgtAcct"]}}
            ]},
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.52A",
                            "logic": {"var": "data.ISO20022_MX.Document.ChrgsPmtReq.Chrgs.PerTx.Rcrd.DbtrAgt.FinInstnId.BICFI"}
                        }
                    ]
                }
            }
        }
    ]
}
