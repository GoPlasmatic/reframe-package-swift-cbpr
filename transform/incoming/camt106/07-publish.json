{
    "id": "camt106-publish",
    "name": "Publish camt.106 to MTn91",
    "description": "Publishes the transformed MT191 or MT291 message",
    "priority": 8,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.106"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "camt106-sender-receiver-info-mapping"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_sender_receiver_info"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "publish_mt_message",
            "name": "Publish MT Message",
            "description": "Publishes the final MT191 or MT291 message",
            "function": {"name": "publish_mt", "input": {"source": "SwiftMT", "target": "result"}}
        }
    ]
}
