{
    "id": "camt106-mandatory-fields-mapping",
    "name": "camt.106 to MTn91 Mandatory Fields Mapping",
    "description": "Maps mandatory fields for MT191/MT291 transformation per CBPR+ specification",
    "priority": 5,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.106"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "camt106-headers-mapping"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_headers"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_mandatory_fields",
            "name": "Map Mandatory Fields",
            "description": "Maps Field 20, 21, 32B, and 121 for MTn91",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#20",
                            "logic": {
                                "reference": {
                                    "substr": [
                                        {"replace": [{"var": "data.ISO20022_MX.Document.ChrgsPmtReq.Chrgs.PerTx.ChrgsId"}, "-", ""]},
                                        0,
                                        16
                                    ]
                                }
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.#21",
                            "logic": {
                                "reference": {
                                    "substr": [
                                        {
                                            "replace": [
                                                { "if": [
                                                    {"var": "data.ISO20022_MX.Document.ChrgsPmtReq.Chrgs.PerTx.Rcrd.UndrlygTx.InstrId"},
                                                    {"var": "data.ISO20022_MX.Document.ChrgsPmtReq.Chrgs.PerTx.Rcrd.UndrlygTx.InstrId"},
                                                    { "if": [
                                                        {"var": "data.ISO20022_MX.Document.ChrgsPmtReq.Chrgs.PerTx.Rcrd.UndrlygTx.EndToEndId"},
                                                        {"var": "data.ISO20022_MX.Document.ChrgsPmtReq.Chrgs.PerTx.Rcrd.UndrlygTx.EndToEndId"},
                                                        { "if": [
                                                            {"var": "data.ISO20022_MX.Document.ChrgsPmtReq.Chrgs.PerTx.Rcrd.UndrlygTx.MsgId"},
                                                            {"var": "data.ISO20022_MX.Document.ChrgsPmtReq.Chrgs.PerTx.Rcrd.UndrlygTx.MsgId"},
                                                            { "if": [
                                                                {"var": "data.ISO20022_MX.Document.ChrgsPmtReq.Chrgs.PerTx.Rcrd.UndrlygTx.AcctSvcrRef"},
                                                                {"var": "data.ISO20022_MX.Document.ChrgsPmtReq.Chrgs.PerTx.Rcrd.UndrlygTx.AcctSvcrRef"},
                                                                "NOTPROVIDED"
                                                            ]}
                                                        ]}
                                                    ]}
                                                ]},
                                                "-",
                                                ""
                                            ]
                                        },
                                        0,
                                        16
                                    ]
                                }
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.32B",
                            "logic": {
                                "currency": {"var": "data.ISO20022_MX.Document.ChrgsPmtReq.Chrgs.PerTx.Rcrd.TtlChrgsPerRcrd.TtlChrgsAmt.@Ccy"},
                                "amount": {"var": "data.ISO20022_MX.Document.ChrgsPmtReq.Chrgs.PerTx.Rcrd.TtlChrgsPerRcrd.TtlChrgsAmt.$value"}
                            }
                        }
                    ]
                }
            }
        }
    ]
}
