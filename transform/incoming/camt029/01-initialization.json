{
    "id": "camt029-initialization",
    "name": "camt.029 Initialization and Validation",
    "description": "Detects target message type and validates preconditions",
    "priority": 2,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.029"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "mx-parser"]},
        {"==": [{"var": "metadata.progress.task_id"}, "parse_mx_message"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "initialize_and_validate",
            "name": "Initialize and Validate",
            "description": "Determines MT196/MT296 and validates required fields",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.message_type",
                            "logic": { "if": [
                                { "or": [
                                    {
                                        "starts_with": [
                                            {"var": "data.ISO20022_MX.Document.RsltnOfInvstgtn.RsltnOfInvstgtn.CxlDtls.TxInfAndSts.OrgnlGrpInf.OrgnlMsgNmId"},
                                            "pacs.008"
                                        ]
                                    },
                                    {
                                        "starts_with": [
                                            {"var": "data.ISO20022_MX.Document.RsltnOfInvstgtn.RsltnOfInvstgtn.CxlDtls.TxInfAndSts.OrgnlGrpInf.OrgnlMsgNmId"},
                                            "pacs.003"
                                        ]
                                    },
                                    {
                                        "starts_with": [
                                            {"var": "data.ISO20022_MX.Document.RsltnOfInvstgtn.RsltnOfInvstgtn.CxlDtls.TxInfAndSts.OrgnlGrpInf.OrgnlMsgNmId"},
                                            "MT10"
                                        ]
                                    }
                                ]},
                                "196",
                                "296"
                            ]}
                        }
                    ]
                }
            }
        },
        {
            "id": "validate_mandatory_fields",
            "name": "Validate Mandatory Fields",
            "description": "Ensures all required fields are present",
            "function": {
                "name": "validate",
                "input": {
                    "rules": [
                        {
                            "logic": { "and": [
                                {"!!": [{"var": "data.ISO20022_MX.Document.RsltnOfInvstgtn.Assgnmt.Id"}]},
                                {
                                    "!!": [
                                        {"var": "data.ISO20022_MX.Document.RsltnOfInvstgtn.CxlDtls.TxInfAndSts.CxlStsId"}
                                    ]
                                },
                                {
                                    "!!": [
                                        {"var": "data.ISO20022_MX.Document.RsltnOfInvstgtn.CxlDtls.TxInfAndSts.RslvdCase.Id"}
                                    ]
                                },
                                {"!!": [{"var": "data.ISO20022_MX.Document.RsltnOfInvstgtn.Sts.Conf"}]},
                                {
                                    "!!": [
                                        {"var": "data.ISO20022_MX.Document.RsltnOfInvstgtn.CxlDtls.TxInfAndSts.OrgnlUETR"}
                                    ]
                                }
                            ]},
                            "message": "Required fields missing: Assignment Id, Cancellation Status Id, Resolved Case Id, Status Confirmation, or Original UETR"
                        },
                        {
                            "logic": {
                                "in": [
                                    {"var": "data.ISO20022_MX.Document.RsltnOfInvstgtn.Sts.Conf"},
                                    ["CNCL", "PDCR", "RJCR"]
                                ]
                            },
                            "message": "Status Confirmation must be CNCL, PDCR, or RJCR"
                        }
                    ]
                }
            }
        }
    ]
}
