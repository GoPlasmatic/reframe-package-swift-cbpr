{
    "id": "camt029-headers-mapping",
    "name": "camt.029 to MT196/MT296 Headers Mapping",
    "description": "Maps SWIFT headers and block 3 for MT196/MT296",
    "priority": 3,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.029"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "camt029-initialization"]},
        {"==": [{"var": "metadata.progress.task_id"}, "validate_mandatory_fields"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_swift_headers",
            "name": "Map SWIFT Headers",
            "description": "Maps all SWIFT header blocks",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.basic_header",
                            "logic": {
                                "application_id": "F",
                                "service_id": "01",
                                "logical_terminal": {
                                    "cat": [
                                        {"var": "data.ISO20022_MX.Document.RsltnOfInvstgtn.Assgnmt.Assgnr.Agt.FinInstnId.BICFI"},
                                        "AXXX"
                                    ]
                                },
                                "sender_bic": {"var": "data.ISO20022_MX.Document.RsltnOfInvstgtn.Assgnmt.Assgnr.Agt.FinInstnId.BICFI"},
                                "session_number": "0000",
                                "sequence_number": "000000"
                            }
                        },
                        {
                            "path": "data.SwiftMT.application_header",
                            "logic": {
                                "direction": "I",
                                "message_type": {"var": "data.SwiftMT.message_type"},
                                "destination_address": {
                                    "cat": [
                                        {"var": "data.ISO20022_MX.Document.RsltnOfInvstgtn.Assgnmt.Assgne.Agt.FinInstnId.BICFI"},
                                        "AXXX"
                                    ]
                                },
                                "receiver_bic": {"var": "data.ISO20022_MX.Document.RsltnOfInvstgtn.Assgnmt.Assgne.Agt.FinInstnId.BICFI"},
                                "priority": "N"
                            }
                        },
                        {
                            "path": "data.SwiftMT.user_header",
                            "condition": {"var": "data.ISO20022_MX.Document.RsltnOfInvstgtn.CxlDtls.TxInfAndSts.OrgnlUETR"},
                            "logic": {
                                "validation_flag": "STP",
                                "uetr": {"var": "data.ISO20022_MX.Document.RsltnOfInvstgtn.CxlDtls.TxInfAndSts.OrgnlUETR"}
                            }
                        }
                    ]
                }
            }
        }
    ]
}
