{
    "id": "camt107-postconditions",
    "name": "camt.107 to MT110 Postconditions",
    "description": "Validates postconditions and generates MT110 message",
    "priority": 5,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.107"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "camt107-to-mt110-mapping"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_mt110_structure"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "validate_postconditions",
            "name": "Validate Postconditions",
            "description": "Validate MT110 postconditions per CBPR+ specification",
            "function": {
                "name": "validate",
                "input": {
                    "rules": [
                        {
                            "path": "data",
                            "message": "Field 20 (Message Reference) is required",
                            "logic": {"!!": {"var": "data.SwiftMT.fields.20"}}
                        },
                        {
                            "path": "data",
                            "message": "At least one cheque must be present",
                            "logic": {">=": [{"length": {"var": "data.SwiftMT.fields.#"}}, 1]}
                        },
                        {
                            "path": "data",
                            "message": "Field 21 (Cheque Number) is required in first cheque",
                            "logic": {"!!": {"var": "data.SwiftMT.fields.#.0.21"}}
                        },
                        {
                            "path": "data",
                            "message": "Field 30 (Issue Date) is required in first cheque",
                            "logic": {"!!": {"var": "data.SwiftMT.fields.#.0.30"}}
                        },
                        {
                            "path": "data",
                            "message": "Either Field 32A or 32B must be present in first cheque",
                            "logic": { "or": [
                                {"!!": {"var": "data.SwiftMT.fields.#.0.32A"}},
                                {"!!": {"var": "data.SwiftMT.fields.#.0.32B"}}
                            ]}
                        },
                        {
                            "path": "data",
                            "message": "Field 59 (Payee) must be present in first cheque",
                            "logic": { "or": [
                                {"!!": {"var": "data.SwiftMT.fields.#.0.59"}},
                                {"!!": {"var": "data.SwiftMT.fields.#.0.59F"}}
                            ]}
                        }
                    ]
                }
            }
        },
        {
            "id": "generate_mt110",
            "name": "Generate MT110",
            "description": "Generate the final MT110 message",
            "condition": { "and": [
                {"==": [{"var": "metadata.progress.workflow_id"}, "camt107-postconditions"]},
                {"==": [{"var": "metadata.progress.task_id"}, "validate_postconditions"]},
                {"==": [{"var": "metadata.progress.status_code"}, 200]}
            ]},
            "function": {"name": "publish_mt", "input": {"source": "SwiftMT", "target": "result"}}
        }
    ]
}
