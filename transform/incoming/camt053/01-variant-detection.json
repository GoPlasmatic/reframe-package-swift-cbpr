{
    "id": "camt053-variant-detection",
    "name": "camt.053 Variant Detection for MT940",
    "description": "Determines MT940 as target message type for camt.053 transformation per specification",
    "priority": 2,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.053"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "mx-parser"]},
        {"==": [{"var": "metadata.progress.task_id"}, "parse_mx_message"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "set_target_message",
            "name": "Set Target Message Type",
            "description": "Sets MT940 as target for customer statement",
            "function": {
                "name": "map",
                "input": {"mappings": [{"path": "data.SwiftMT.message_type", "logic": "940"}]}
            }
        }
    ]
}
