{
    "id": "camt053-balance-fields-mapping",
    "name": "camt.053 to MT940 Balance Fields Mapping",
    "description": "Maps balance fields per specification (TR004, TR008-011)",
    "priority": 6,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.053"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "camt053-mandatory-fields-mapping"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_field_28C"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_opening_balance",
            "name": "Map Opening Balance (Field 60F/60M)",
            "description": "Maps opening balance per TR008",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "temp_data.opening_balance",
                            "logic": {
                                "filter": [
                                    {"var": "data.ISO20022_MX.Document.BkToCstmrStmt.Stmt.Bal"},
                                    {"==": [{"var": "Tp.CdOrPrtry.Cd"}, "OPBD"]}
                                ]
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.60F",
                            "logic": { "if": [
                                { "and": [
                                    {"==": [{"var": "data.ISO20022_MX.Document.BkToCstmrStmt.Stmt.StmtPgntn.PgNb"}, "1"]},
                                    {"exists": ["temp_data", "opening_balance"]}
                                ]},
                                {
                                    "debit_credit_mark": { "if": [
                                        {"==": [{"var": "temp_data.opening_balance.0.CdtDbtInd"}, "CRDT"]},
                                        "C",
                                        "D"
                                    ]},
                                    "value_date": {"var": "temp_data.opening_balance.0.Dt.Dt"},
                                    "currency": {"var": "temp_data.opening_balance.0.Amt.@Ccy"},
                                    "amount": {"var": "temp_data.opening_balance.0.Amt.$value"}
                                },
                                null
                            ]}
                        },
                        {
                            "path": "data.SwiftMT.fields.60M",
                            "logic": { "if": [
                                { "and": [
                                    {"!=": [{"var": "data.ISO20022_MX.Document.BkToCstmrStmt.Stmt.StmtPgntn.PgNb"}, "1"]},
                                    {"exists": ["temp_data", "opening_balance"]}
                                ]},
                                {
                                    "debit_credit_mark": { "if": [
                                        {"==": [{"var": "temp_data.opening_balance.0.CdtDbtInd"}, "CRDT"]},
                                        "C",
                                        "D"
                                    ]},
                                    "value_date": {"var": "temp_data.opening_balance.0.Dt.Dt"},
                                    "currency": {"var": "temp_data.opening_balance.0.Amt.@Ccy"},
                                    "amount": {"var": "temp_data.opening_balance.0.Amt.$value"}
                                },
                                null
                            ]}
                        }
                    ]
                }
            }
        },
        {
            "id": "map_closing_balance",
            "name": "Map Closing Balance (Field 62M/62F)",
            "description": "Maps closing balance per TR009",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "temp_data.closing_balance",
                            "logic": {
                                "filter": [
                                    {"var": "data.ISO20022_MX.Document.BkToCstmrStmt.Stmt.Bal"},
                                    {"==": [{"var": "Tp.CdOrPrtry.Cd"}, "CLBD"]}
                                ]
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.62F",
                            "logic": { "if": [
                                { "and": [
                                    {"==": [{"var": "data.ISO20022_MX.Document.BkToCstmrStmt.Stmt.StmtPgntn.LastPgInd"}, true]},
                                    {"exists": ["temp_data", "closing_balance"]}
                                ]},
                                {
                                    "debit_credit_mark": { "if": [
                                        {"==": [{"var": "temp_data.closing_balance.0.CdtDbtInd"}, "CRDT"]},
                                        "C",
                                        "D"
                                    ]},
                                    "value_date": {"var": "temp_data.closing_balance.0.Dt.Dt"},
                                    "currency": {"var": "temp_data.closing_balance.0.Amt.@Ccy"},
                                    "amount": {"var": "temp_data.closing_balance.0.Amt.$value"}
                                },
                                null
                            ]}
                        },
                        {
                            "path": "data.SwiftMT.fields.62M",
                            "logic": { "if": [
                                { "and": [
                                    {"!=": [{"var": "data.ISO20022_MX.Document.BkToCstmrStmt.Stmt.StmtPgntn.LastPgInd"}, true]},
                                    {"exists": ["temp_data", "closing_balance"]}
                                ]},
                                {
                                    "debit_credit_mark": { "if": [
                                        {"==": [{"var": "temp_data.closing_balance.0.CdtDbtInd"}, "CRDT"]},
                                        "C",
                                        "D"
                                    ]},
                                    "value_date": {"var": "temp_data.closing_balance.0.Dt.Dt"},
                                    "currency": {"var": "temp_data.closing_balance.0.Amt.@Ccy"},
                                    "amount": {"var": "temp_data.closing_balance.0.Amt.$value"}
                                },
                                null
                            ]}
                        }
                    ]
                }
            }
        },
        {
            "id": "map_available_balance",
            "name": "Map Available Balance (Field 64)",
            "description": "Maps closing available balance per TR010",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "temp_data.available_balance",
                            "logic": {
                                "filter": [
                                    {"var": "data.ISO20022_MX.Document.BkToCstmrStmt.Stmt.Bal"},
                                    {"==": [{"var": "Tp.CdOrPrtry.Cd"}, "CLAV"]}
                                ]
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.64",
                            "logic": { "if": [
                                {"exists": ["temp_data", "available_balance", "0"]},
                                {
                                    "debit_credit_mark": { "if": [
                                        {"==": [{"var": "temp_data.available_balance.0.CdtDbtInd"}, "CRDT"]},
                                        "C",
                                        "D"
                                    ]},
                                    "value_date": {"var": "temp_data.available_balance.0.Dt.Dt"},
                                    "currency": {"var": "temp_data.available_balance.0.Amt.@Ccy"},
                                    "amount": {"var": "temp_data.available_balance.0.Amt.$value"}
                                },
                                null
                            ]}
                        }
                    ]
                }
            }
        }
    ]
}
