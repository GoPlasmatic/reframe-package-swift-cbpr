{
    "id": "camt058-narrative-fields-mapping",
    "name": "camt.058 to MT292 Narrative Fields Mapping",
    "description": "Maps narrative and optional fields per CBPR+ specification (MX_To_MT79CANC2 and TR002)",
    "priority": 6,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.058"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "camt058-mandatory-fields-mapping"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_field_11s"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_field_79_and_original_fields",
            "name": "Map Field 79 with Original Message Fields",
            "description": "Maps cancellation reason and original fields per MX_To_MT79CANC2 and TR002",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "temp_data.original_item",
                            "logic": { "if": [
                                {"==": [{"type": {"var": "data.ISO20022_MX.Document.NtfctnToRcvCxlAdvc.OrgnlNtfctn.OrgnlNtfctnRef.OrgnlItm"}}, "array"]},
                                {"var": "data.ISO20022_MX.Document.NtfctnToRcvCxlAdvc.OrgnlNtfctn.OrgnlNtfctnRef.OrgnlItm.0"},
                                {"var": "data.ISO20022_MX.Document.NtfctnToRcvCxlAdvc.OrgnlNtfctn.OrgnlNtfctnRef.OrgnlItm"}
                            ]}
                        },
                        {
                            "path": "data.SwiftMT.fields.#79",
                            "logic": {
                                "information": {
                                    "merge": {
                                        "filter": [
                                            [
                                                { "if": [
                                                    {"var": "data.ISO20022_MX.Document.NtfctnToRcvCxlAdvc.CxlRsn.Rsn.Cd"},
                                                    {"cat": ["/CANC/", {"var": "data.ISO20022_MX.Document.NtfctnToRcvCxlAdvc.CxlRsn.Rsn.Cd"}]},
                                                    null
                                                ]},
                                                { "if": [
                                                    {"var": "temp_data.original_item.UETR"},
                                                    {"cat": ["/UETR/", {"var": "temp_data.original_item.UETR"}]},
                                                    null
                                                ]},
                                                { "if": [
                                                    {"var": "temp_data.original_item.XpctdValDt"},
                                                    {
                                                        "cat": [
                                                            ":30:",
                                                            {
                                                                "substr": [{"var": "temp_data.original_item.XpctdValDt"}, 2, 2]
                                                            },
                                                            {
                                                                "substr": [{"var": "temp_data.original_item.XpctdValDt"}, 5, 2]
                                                            },
                                                            {
                                                                "substr": [{"var": "temp_data.original_item.XpctdValDt"}, 8, 2]
                                                            }
                                                        ]
                                                    },
                                                    null
                                                ]},
                                                { "if": [
                                                    {"var": "temp_data.original_item.Amt"},
                                                    {
                                                        "cat": [
                                                            ":32B:",
                                                            {"var": "temp_data.original_item.Amt.@Ccy"},
                                                            {"var": "temp_data.original_item.Amt.$value"}
                                                        ]
                                                    },
                                                    null
                                                ]}
                                            ],
                                            {"!!": {"var": ""}}
                                        ]
                                    }
                                }
                            }
                        }
                    ]
                }
            }
        }
    ]
}
