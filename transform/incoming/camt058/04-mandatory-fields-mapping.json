{
    "id": "camt058-mandatory-fields-mapping",
    "name": "camt.058 to MT292 Mandatory Fields Mapping",
    "description": "Maps mandatory fields for MT292 per CBPR+ specification",
    "priority": 5,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.058"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "camt058-headers-mapping"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_swift_headers"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_field_20",
            "name": "Map Sender's Reference (Field 20)",
            "description": "Maps GroupHeader/MessageIdentification as per specification",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#20",
                            "logic": {"reference": {"var": "data.ISO20022_MX.Document.NtfctnToRcvCxlAdvc.GrpHdr.MsgId"}}
                        }
                    ]
                }
            }
        },
        {
            "id": "map_field_21",
            "name": "Map Related Reference (Field 21)",
            "description": "Maps OriginalNotificationReference/OriginalItem/OriginalItemIdentification",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#21",
                            "logic": {
                                "reference": { "if": [
                                    {"==": [{"type": {"var": "data.ISO20022_MX.Document.NtfctnToRcvCxlAdvc.OrgnlNtfctn.OrgnlNtfctnRef.OrgnlItm"}}, "array"]},
                                    {"var": "data.ISO20022_MX.Document.NtfctnToRcvCxlAdvc.OrgnlNtfctn.OrgnlNtfctnRef.OrgnlItm.0.OrgnlItmId"},
                                    {"var": "data.ISO20022_MX.Document.NtfctnToRcvCxlAdvc.OrgnlNtfctn.OrgnlNtfctnRef.OrgnlItm.OrgnlItmId"}
                                ]}
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "map_field_11s",
            "name": "Map MT and Date of Original Message (Field 11S)",
            "description": "Maps original message type and creation date per TR001",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#11S",
                            "logic": {
                                "message_type": "210",
                                "date": { "if": [
                                    {"var": "data.ISO20022_MX.Document.NtfctnToRcvCxlAdvc.OrgnlNtfctn.OrgnlCreDtTm"},
                                    {
                                        "substr": [
                                            {"var": "data.ISO20022_MX.Document.NtfctnToRcvCxlAdvc.OrgnlNtfctn.OrgnlCreDtTm"},
                                            0,
                                            10
                                        ]
                                    },
                                    "991231"
                                ]}
                            }
                        }
                    ]
                }
            }
        }
    ]
}
