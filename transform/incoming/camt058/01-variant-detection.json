{
    "id": "camt058-variant-detection",
    "name": "camt.058 Variant Detection for MT292",
    "description": "Detects and prepares camt.058 for transformation to MT292 per CBPR+ specification",
    "priority": 2,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.058"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "mx-parser"]},
        {"==": [{"var": "metadata.progress.task_id"}, "parse_mx_message"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "set_target_message",
            "name": "Set Target Message Type",
            "description": "Sets MT292 as the target message type for camt.058 cancellation advice",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {"path": "data.SwiftMT.message_type", "logic": "292"},
                        {"path": "data.SwiftMT.direction", "logic": "O"}
                    ]
                }
            }
        }
    ]
}
