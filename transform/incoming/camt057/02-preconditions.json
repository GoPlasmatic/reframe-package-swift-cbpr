{
    "id": "camt057-preconditions",
    "name": "camt.057 to MT210 Preconditions Validation",
    "description": "Validates preconditions for camt.057 to MT210 transformation per CBPR+ spec",
    "priority": 3,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.057"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "camt057-variant-detection"]},
        {"==": [{"var": "metadata.progress.task_id"}, "set_message_type"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "validate_preconditions",
            "name": "Validate Preconditions",
            "description": "Validates preconditions for camt.057 to MT210 transformation per CBPR+ specification",
            "function": {
                "name": "validate",
                "input": {
                    "rules": [
                        {
                            "path": "data.ISO20022_MX.Document.NtfctnToRcv.Ntfctn.Itm",
                            "logic": { "or": [
                                {"!": {"var": "data.ISO20022_MX.Document.NtfctnToRcv.Ntfctn.Itm"}},
                                {"==": [{"length": {"var": "data.ISO20022_MX.Document.NtfctnToRcv.Ntfctn.Itm"}}, 1]}
                            ]},
                            "message": "T20061: PREC001: Only one Notification/Item occurrence allowed. In camt.057, Single Notification Item should be sent unless bilaterally agreed. Only one occurrence of Notification/Item is allowed."
                        },
                        {
                            "path": "data.ISO20022_MX.Document.NtfctnToRcv.Ntfctn.Itm[0].Amt.Ccy",
                            "logic": {
                                "!": {
                                    "in": [
                                        {"var": "data.ISO20022_MX.Document.NtfctnToRcv.Ntfctn.Itm.0.Amt.@Ccy"},
                                        ["XAU", "XAG", "XPD", "XPT"]
                                    ]
                                }
                            },
                            "message": "T20054: PREC002: Check for precious metal currencies. Precious metal currencies (XAU, XAG, XPD, XPT) are not supported in MT210 transformation."
                        },
                        {
                            "path": "data.ISO20022_MX.Document.NtfctnToRcv.Ntfctn.Itm.0.Amt",
                            "logic": {"<=": [{"var": "data.ISO20022_MX.Document.NtfctnToRcv.Ntfctn.Itm.0.Amt.$value"}, 99999999999999.98]},
                            "message": "T20066: PREC003: Total number of digits in amount must not exceed 14. The total number of digits in the amount exceeds 14, which is the maximum allowed in MT210."
                        }
                    ]
                }
            }
        }
    ]
}
