{
    "id": "camt057-mandatory-fields-mapping",
    "name": "camt.057 to MT210 Mandatory Fields Mapping",
    "description": "Maps mandatory fields per CBPR+ specification (TR001-TR005)",
    "priority": 5,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.057"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "camt057-headers-mapping"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_swift_headers"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_field_20",
            "name": "Map Transaction Reference (Field 20)",
            "description": "Maps GroupHeader/MessageIdentification per TR001",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#20",
                            "logic": {"reference": {"var": "data.ISO20022_MX.Document.NtfctnToRcv.GrpHdr.MsgId"}}
                        }
                    ]
                }
            }
        },
        {
            "id": "map_field_21",
            "name": "Map Related Reference (Field 21)",
            "description": "Maps Item/EndToEndIdentification or Item/Identification per TR004",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#21",
                            "logic": {
                                "reference": { "if": [
                                    {"var": "data.ISO20022_MX.Document.NtfctnToRcv.Ntfctn.Itm.0.EndToEndId"},
                                    {"var": "data.ISO20022_MX.Document.NtfctnToRcv.Ntfctn.Itm.0.EndToEndId"},
                                    {"var": "data.ISO20022_MX.Document.NtfctnToRcv.Ntfctn.Itm.0.Id"}
                                ]}
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "map_field_25",
            "name": "Map Account (Field 25)",
            "description": "Maps account from Notification or Item level per TR002",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#25",
                            "logic": {
                                "authorisation": { "if": [
                                    {"var": "data.ISO20022_MX.Document.NtfctnToRcv.Ntfctn.Acct.Id.IBAN"},
                                    {"var": "data.ISO20022_MX.Document.NtfctnToRcv.Ntfctn.Acct.Id.IBAN"},
                                    { "if": [
                                        {"var": "data.ISO20022_MX.Document.NtfctnToRcv.Ntfctn.Acct.Id.Othr.Id"},
                                        {"var": "data.ISO20022_MX.Document.NtfctnToRcv.Ntfctn.Acct.Id.Othr.Id"},
                                        { "if": [
                                            {"var": "data.ISO20022_MX.Document.NtfctnToRcv.Ntfctn.Itm.0.Acct.Id.IBAN"},
                                            {"var": "data.ISO20022_MX.Document.NtfctnToRcv.Ntfctn.Itm.0.Acct.Id.IBAN"},
                                            {"var": "data.ISO20022_MX.Document.NtfctnToRcv.Ntfctn.Itm.0.Acct.Id.Othr.Id"}
                                        ]}
                                    ]}
                                ]}
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "map_field_30",
            "name": "Map Value Date (Field 30)",
            "description": "Maps ExpectedValueDate per TR003",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#30",
                            "logic": {
                                "execution_date": { "if": [
                                    {"var": "data.ISO20022_MX.Document.NtfctnToRcv.Ntfctn.XpctdValDt"},
                                    {"var": "data.ISO20022_MX.Document.NtfctnToRcv.Ntfctn.XpctdValDt"},
                                    {"var": "data.ISO20022_MX.Document.NtfctnToRcv.Ntfctn.Itm.0.XpctdValDt"}
                                ]}
                            }
                        }
                    ]
                }
            }
        }
    ]
}
