{
    "id": "pain001-to-mt101-mandatory-fields",
    "name": "pain.001 to MT101 Mandatory Fields Mapping",
    "description": "Maps mandatory fields from pain.001 to MT101 Sequence A and B",
    "priority": 5,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "pain.001"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "pain001-to-mt101-headers"]},
        {"==": [{"var": "metadata.progress.task_id"}, "initialize_transactions"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_sequence_a_mandatory",
            "name": "Map Sequence A Mandatory Fields",
            "description": "Maps mandatory fields for MT101 Sequence A including field 20, 30, 50, 52",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#20",
                            "logic": {
                                "reference": { "if": [
                                    {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.GrpHdr.MsgId"},
                                    {
                                        "substr": [{"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.GrpHdr.MsgId"}, 0, 16]
                                    },
                                    "NOTPROVIDED"
                                ]}
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.28D",
                            "logic": { "if": [
                                { "and": [
                                    {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.GrpHdr.MsgPgntn.PgNb"},
                                    {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.GrpHdr.MsgPgntn.LastPgInd"}
                                ]},
                                {
                                    "index": {"+": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.GrpHdr.MsgPgntn.PgNb"}},
                                    "total": {"+": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.GrpHdr.MsgPgntn.LastPgInd"}}
                                },
                                {"index": 1, "total": 1}
                            ]}
                        },
                        {
                            "path": "data.SwiftMT.fields.#30",
                            "logic": {"execution_date": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.ReqdExctnDt.Dt"}}
                        },
                        {
                            "path": "data.SwiftMT.fields.50C",
                            "logic": { "if": [
                                {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.GrpHdr.InitgPty.Id.OrgId.AnyBIC"},
                                {
                                    "identifier_code": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.GrpHdr.InitgPty.Id.OrgId.AnyBIC"},
                                    "name_and_address": []
                                },
                                null
                            ]}
                        },
                        {
                            "path": "data.SwiftMT.fields.50L",
                            "logic": { "if": [
                                { "and": [
                                    {"!": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.GrpHdr.InitgPty.Id.OrgId.AnyBIC"}},
                                    {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.GrpHdr.InitgPty.Nm"}
                                ]},
                                {
                                    "party_identifier": {
                                        "substr": [{"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.GrpHdr.InitgPty.Nm"}, 0, 35]
                                    }
                                },
                                null
                            ]}
                        },
                        {
                            "path": "data.SwiftMT.fields.52A",
                            "logic": { "if": [
                                {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.DbtrAgt.FinInstnId.BICFI"},
                                {"bic": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.DbtrAgt.FinInstnId.BICFI"}},
                                null
                            ]}
                        },
                        {
                            "path": "data.SwiftMT.fields.52C",
                            "logic": { "if": [
                                { "and": [
                                    {"!": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.DbtrAgt.FinInstnId.BICFI"}},
                                    {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.DbtrAgt.FinInstnId.ClrSysMmbId.MmbId"}
                                ]},
                                {
                                    "party_identifier": {
                                        "cat": [
                                            "//",
                                            { "if": [
                                                {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.DbtrAgt.FinInstnId.ClrSysMmbId.ClrSysId.Cd"},
                                                {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.DbtrAgt.FinInstnId.ClrSysMmbId.ClrSysId.Cd"},
                                                ""
                                            ]},
                                            {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.DbtrAgt.FinInstnId.ClrSysMmbId.MmbId"}
                                        ]
                                    },
                                    "name_and_address": []
                                },
                                null
                            ]}
                        }
                    ]
                }
            }
        },
        {
            "id": "map_sequence_b_reference",
            "name": "Map Sequence B Reference Fields",
            "description": "Maps field 21 transaction reference from payment information identification",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.##.0.#21",
                            "logic": {
                                "reference": { "if": [
                                    {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.PmtId.EndToEndId"},
                                    {
                                        "substr": [
                                            {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.PmtId.EndToEndId"},
                                            0,
                                            16
                                        ]
                                    },
                                    { "if": [
                                        {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.PmtInfId"},
                                        {
                                            "substr": [{"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.PmtInfId"}, 0, 16]
                                        },
                                        "NOTPROVIDED"
                                    ]}
                                ]}
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "map_field_32B",
            "name": "Map Field 32B Currency and Transaction Amount",
            "description": "Maps amount field 32B from InstructedAmount or EquivalentAmount",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.##.0.#32B",
                            "logic": { "if": [
                                {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.Amt.InstdAmt"},
                                {
                                    "currency": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.Amt.InstdAmt.@Ccy"},
                                    "amount": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.Amt.InstdAmt.$value"}
                                },
                                { "if": [
                                    {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.Amt.EqvtAmt"},
                                    {
                                        "currency": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.Amt.EqvtAmt.CcyOfTrf"},
                                        "amount": "0"
                                    },
                                    null
                                ]}
                            ]}
                        }
                    ]
                }
            }
        },
        {
            "id": "map_field_33B",
            "name": "Map Field 33B Currency and Original Ordered Amount",
            "description": "Maps amount field 33B from EquivalentAmount when present",
            "condition": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.Amt.EqvtAmt"},
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.##.0.#33B",
                            "logic": {
                                "currency": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.Amt.EqvtAmt.Amt.@Ccy"},
                                "amount": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.Amt.EqvtAmt.Amt.$value"}
                            }
                        }
                    ]
                }
            }
        }
    ]
}
