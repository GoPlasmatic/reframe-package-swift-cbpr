{
    "id": "pain001-to-mt101-party-fields",
    "name": "pain.001 to MT101 Party Fields Mapping",
    "description": "Maps party fields including Debtor (50F/G/H), Creditor (59/59A/59F), and Ultimate parties",
    "priority": 6,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "pain.001"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "pain001-to-mt101-mandatory-fields"]},
        { "or": [
            {"==": [{"var": "metadata.progress.task_id"}, "map_field_32B"]},
            {"==": [{"var": "metadata.progress.task_id"}, "map_field_33B"]}
        ]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_debtor_field_50F",
            "name": "Map Debtor to Field 50F",
            "description": "Maps Debtor information to field 50F when BIC and IBAN are present",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.##.0.50F",
                            "logic": { "if": [
                                { "and": [
                                    {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.Dbtr.Id.OrgId.AnyBIC"},
                                    {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.DbtrAcct.Id.IBAN"}
                                ]},
                                {
                                    "party_identifier": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.DbtrAcct.Id.IBAN"},
                                    "identifier_code": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.Dbtr.Id.OrgId.AnyBIC"}
                                },
                                null
                            ]}
                        }
                    ]
                }
            }
        },
        {
            "id": "map_debtor_field_50G",
            "name": "Map Debtor to Field 50G",
            "description": "Maps Debtor information to field 50G when Name and IBAN are present (but not BIC)",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.##.0.50G",
                            "logic": { "if": [
                                { "and": [
                                    {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.Dbtr.Nm"},
                                    {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.DbtrAcct.Id.IBAN"},
                                    {"!": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.Dbtr.Id.OrgId.AnyBIC"}}
                                ]},
                                {
                                    "party_identifier": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.DbtrAcct.Id.IBAN"},
                                    "name_and_address": {
                                        "filter": [
                                            [
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.Dbtr.Nm"}, 0, 35]
                                                }
                                            ],
                                            {"!!": {"var": ""}}
                                        ]
                                    }
                                },
                                null
                            ]}
                        }
                    ]
                }
            }
        },
        {
            "id": "map_debtor_field_50H",
            "name": "Map Debtor to Field 50H",
            "description": "Maps Debtor information to field 50H when Name is present (no IBAN, no BIC)",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.##.0.50H",
                            "logic": { "if": [
                                { "and": [
                                    {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.Dbtr.Nm"},
                                    {"!": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.Dbtr.Id.OrgId.AnyBIC"}},
                                    {"!": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.DbtrAcct.Id.IBAN"}}
                                ]},
                                {
                                    "party_identifier": { "if": [
                                        {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.DbtrAcct.Id.Othr.Id"},
                                        {
                                            "cat": [
                                                "/",
                                                {
                                                    "substr": [
                                                        {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.DbtrAcct.Id.Othr.Id"},
                                                        0,
                                                        33
                                                    ]
                                                }
                                            ]
                                        },
                                        null
                                    ]},
                                    "name_and_address": {
                                        "filter": [
                                            [
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.Dbtr.Nm"}, 0, 35]
                                                }
                                            ],
                                            {"!!": {"var": ""}}
                                        ]
                                    }
                                },
                                null
                            ]}
                        }
                    ]
                }
            }
        },
        {
            "id": "map_creditor_field_59A",
            "name": "Map Creditor to Field 59A",
            "description": "Maps Creditor information to field 59A when BIC is present but no account",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.##.0.59A",
                            "logic": { "if": [
                                { "and": [
                                    {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.Cdtr.Id.OrgId.AnyBIC"},
                                    {"!": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.CdtrAcct"}}
                                ]},
                                {"bic": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.Cdtr.Id.OrgId.AnyBIC"}},
                                null
                            ]}
                        }
                    ]
                }
            }
        },
        {
            "id": "map_creditor_field_59F",
            "name": "Map Creditor to Field 59F",
            "description": "Maps Creditor information to field 59F when BIC and IBAN account are present",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.##.0.59F",
                            "logic": { "if": [
                                { "and": [
                                    {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.Cdtr.Id.OrgId.AnyBIC"},
                                    {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.CdtrAcct.Id.IBAN"}
                                ]},
                                {
                                    "account": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.CdtrAcct.Id.IBAN"},
                                    "identifier_code": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.Cdtr.Id.OrgId.AnyBIC"}
                                },
                                null
                            ]}
                        }
                    ]
                }
            }
        },
        {
            "id": "map_creditor_field_59",
            "name": "Map Creditor to Field 59 (No Option)",
            "description": "Maps Creditor information to field 59 when BIC is not present",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.##.0.#59",
                            "logic": { "if": [
                                {"!": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.Cdtr.Id.OrgId.AnyBIC"}},
                                {
                                    "account": { "if": [
                                        {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.CdtrAcct.Id.IBAN"},
                                        {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.CdtrAcct.Id.IBAN"},
                                        { "if": [
                                            {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.CdtrAcct.Id.Othr.Id"},
                                            {
                                                "cat": [
                                                    "/",
                                                    {
                                                        "substr": [
                                                            {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.CdtrAcct.Id.Othr.Id"},
                                                            0,
                                                            33
                                                        ]
                                                    }
                                                ]
                                            },
                                            null
                                        ]}
                                    ]},
                                    "name_and_address": {
                                        "filter": [
                                            [
                                                { "if": [
                                                    {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.Cdtr.Nm"},
                                                    {
                                                        "substr": [
                                                            {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.Cdtr.Nm"},
                                                            0,
                                                            35
                                                        ]
                                                    },
                                                    "NOTPROVIDED"
                                                ]}
                                            ],
                                            {"!!": {"var": ""}}
                                        ]
                                    }
                                },
                                null
                            ]}
                        }
                    ]
                }
            }
        }
    ]
}
