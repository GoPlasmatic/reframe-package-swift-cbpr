{
    "id": "pain001-to-mt101-headers",
    "name": "pain.001 to MT101 Headers Mapping",
    "description": "Maps pain.001 header information to MT101 basic and application headers",
    "priority": 4,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "pain.001"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "pain001-to-mt101-preconditions"]},
        {"==": [{"var": "metadata.progress.task_id"}, "PREC017_validate_clearing_system_consistency"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_basic_header",
            "name": "Map Basic Header",
            "description": "Maps sender BIC from pain.001 to MT101 basic header",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.basic_header",
                            "logic": {
                                "application_id": "F",
                                "service_id": "01",
                                "sender_bic": {
                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}, 0, 8]
                                },
                                "logical_terminal": { "if": [
                                    {"==": [{"length": {"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}}, 8]},
                                    {"cat": [{"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}, "AXXX"]},
                                    { "if": [
                                        {"==": [{"length": {"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}}, 11]},
                                        {
                                            "cat": [
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}, 0, 8]
                                                },
                                                "A",
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}, 8, 3]
                                                }
                                            ]
                                        },
                                        {
                                            "cat": [
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}, 0, 8]
                                                },
                                                "AXXX"
                                            ]
                                        }
                                    ]}
                                ]},
                                "session_number": "0000",
                                "sequence_number": "000000"
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "map_application_header",
            "name": "Map Application Header",
            "description": "Maps application header fields for MT101",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.application_header",
                            "logic": {
                                "direction": "I",
                                "message_type": "101",
                                "receiver_bic": {
                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}, 0, 8]
                                },
                                "destination_address": { "if": [
                                    {"==": [{"length": {"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}}, 8]},
                                    {"cat": [{"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}, "AXXX"]},
                                    { "if": [
                                        {"==": [{"length": {"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}}, 11]},
                                        {
                                            "cat": [
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}, 0, 8]
                                                },
                                                "A",
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}, 8, 3]
                                                }
                                            ]
                                        },
                                        {
                                            "cat": [
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}, 0, 8]
                                                },
                                                "AXXX"
                                            ]
                                        }
                                    ]}
                                ]},
                                "priority": "N",
                                "delivery_monitoring": "2",
                                "obsolescence_period": "003"
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "map_user_header",
            "name": "Map User Header (Block 3)",
            "description": "Maps UETR to MT101 user header block 3",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.user_header",
                            "logic": {"unique_end_to_end_reference": {"var": "data.ISO20022_MX.Document.CstmrCdtTrfInitn.PmtInf.CdtTrfTxInf.PmtId.UETR"}}
                        }
                    ]
                }
            }
        },
        {
            "id": "initialize_transactions",
            "name": "Initialize Transactions Array",
            "description": "Creates the transactions array for Sequence B fields",
            "function": {
                "name": "map",
                "input": {"mappings": [{"path": "data.SwiftMT.fields.##", "logic": []}]}
            }
        }
    ]
}
