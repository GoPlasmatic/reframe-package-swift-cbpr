{
    "id": "pacs010-to-mt204-headers",
    "name": "pacs.010 to MT204 Headers Mapping",
    "description": "Maps pacs.010 header information to MT204 basic and application headers",
    "priority": 4,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "pacs.010"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "pacs010-to-mt204-preconditions"]},
        {"==": [{"var": "metadata.progress.task_id"}, "validate_mandatory_elements"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_basic_header",
            "name": "Map Basic Header",
            "description": "Maps sender and receiver BIC from pacs.010 to MT204 basic header",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.basic_header",
                            "logic": {
                                "application_id": "F",
                                "service_id": "01",
                                "sender_bic": {
                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}, 0, 8]
                                },
                                "logical_terminal": { "if": [
                                    {"==": [{"length": {"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}}, 8]},
                                    {"cat": [{"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}, "AXXX"]},
                                    { "if": [
                                        {"==": [{"length": {"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}}, 11]},
                                        {
                                            "cat": [
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}, 0, 8]
                                                },
                                                "A",
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}, 8, 3]
                                                }
                                            ]
                                        },
                                        {
                                            "cat": [
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}, 0, 8]
                                                },
                                                "AXXX"
                                            ]
                                        }
                                    ]}
                                ]},
                                "session_number": "0000",
                                "sequence_number": "000000"
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "map_application_header",
            "name": "Map Application Header",
            "description": "Maps application header fields for MT204",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.application_header",
                            "logic": {
                                "direction": "I",
                                "message_type": "204",
                                "receiver_bic": {
                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}, 0, 8]
                                },
                                "destination_address": { "if": [
                                    {"==": [{"length": {"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}}, 8]},
                                    {"cat": [{"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}, "AXXX"]},
                                    { "if": [
                                        {"==": [{"length": {"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}}, 11]},
                                        {
                                            "cat": [
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}, 0, 8]
                                                },
                                                "A",
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}, 8, 3]
                                                }
                                            ]
                                        },
                                        {
                                            "cat": [
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}, 0, 8]
                                                },
                                                "AXXX"
                                            ]
                                        }
                                    ]}
                                ]},
                                "priority": "N",
                                "delivery_monitoring": "2",
                                "obsolescence_period": "003"
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "map_user_header",
            "name": "Map User Header (Block 3)",
            "description": "Maps UETR to MT204 user header block 3",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.user_header",
                            "logic": {
                                "unique_end_to_end_reference": { "if": [
                                    {"var": "data.ISO20022_MX.Document.FIDrctDbt.CdtInstr.DrctDbtTxInf.PmtId.UETR"},
                                    {"var": "data.ISO20022_MX.Document.FIDrctDbt.CdtInstr.DrctDbtTxInf.PmtId.UETR"},
                                    null
                                ]},
                                "service_type_identifier": { "if": [
                                    {"var": "data.ISO20022_MX.AppHdr.BizSvc"},
                                    { "if": [
                                        {
                                            "in": [
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.BizSvc"}, -2, 2]
                                                },
                                                ["01", "02", "03", "04"]
                                            ]
                                        },
                                        {
                                            "cat": [
                                                "00",
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.BizSvc"}, -1, 1]
                                                }
                                            ]
                                        },
                                        null
                                    ]},
                                    null
                                ]}
                            }
                        }
                    ]
                }
            }
        }
    ]
}
