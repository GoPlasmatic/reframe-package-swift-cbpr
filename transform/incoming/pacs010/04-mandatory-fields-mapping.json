{
    "id": "pacs010-to-mt204-mandatory-fields",
    "name": "pacs.010 to MT204 Mandatory Fields Mapping",
    "description": "Maps mandatory fields from pacs.010 to MT204 Sequence A and B",
    "priority": 5,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "pacs.010"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "pacs010-to-mt204-headers"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_user_header"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_sequence_a_fields",
            "name": "Map Sequence A Fields",
            "description": "Maps fields for MT204 Sequence A including field 20, 19, and 30",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#20",
                            "logic": {
                                "reference": { "if": [
                                    {"var": "data.ISO20022_MX.Document.FIDrctDbt.CdtInstr.CdtId"},
                                    {
                                        "substr": [{"var": "data.ISO20022_MX.Document.FIDrctDbt.CdtInstr.CdtId"}, 0, 16]
                                    },
                                    "NOTPROVIDED"
                                ]}
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.#19",
                            "logic": {
                                "amount": { "if": [
                                    {"var": "data.ISO20022_MX.Document.FIDrctDbt.CdtInstr.DrctDbtTxInf.IntrBkSttlmAmt.$value"},
                                    {"var": "data.ISO20022_MX.Document.FIDrctDbt.CdtInstr.DrctDbtTxInf.IntrBkSttlmAmt.$value"},
                                    0
                                ]}
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.#30",
                            "logic": {
                                "execution_date": { "if": [
                                    {"var": "data.ISO20022_MX.Document.FIDrctDbt.CdtInstr.DrctDbtTxInf.IntrBkSttlmDt"},
                                    {"var": "data.ISO20022_MX.Document.FIDrctDbt.CdtInstr.DrctDbtTxInf.IntrBkSttlmDt"},
                                    "1999-12-31"
                                ]}
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "initialize_transactions_array",
            "name": "Initialize Transactions Array",
            "description": "Creates the transactions array structure for MT204",
            "function": {
                "name": "map",
                "input": {"mappings": [{"path": "data.SwiftMT.fields.##", "logic": [{}]}]}
            }
        },
        {
            "id": "map_transaction_fields",
            "name": "Map Transaction Fields",
            "description": "Maps transaction fields including field 20, 21, and 32B for Sequence B",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.##.0.#20",
                            "logic": {
                                "reference": { "if": [
                                    {"var": "data.ISO20022_MX.Document.FIDrctDbt.CdtInstr.DrctDbtTxInf.PmtId.InstrId"},
                                    {
                                        "substr": [
                                            {"var": "data.ISO20022_MX.Document.FIDrctDbt.CdtInstr.DrctDbtTxInf.PmtId.InstrId"},
                                            0,
                                            16
                                        ]
                                    },
                                    "NOTPROVIDED"
                                ]}
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.##.0.#21",
                            "logic": {
                                "reference": { "if": [
                                    {"var": "data.ISO20022_MX.Document.FIDrctDbt.CdtInstr.DrctDbtTxInf.PmtId.EndToEndId"},
                                    {
                                        "substr": [
                                            {"var": "data.ISO20022_MX.Document.FIDrctDbt.CdtInstr.DrctDbtTxInf.PmtId.EndToEndId"},
                                            0,
                                            16
                                        ]
                                    },
                                    null
                                ]}
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.##.0.32B",
                            "logic": {
                                "currency": {"var": "data.ISO20022_MX.Document.FIDrctDbt.CdtInstr.DrctDbtTxInf.IntrBkSttlmAmt.@Ccy"},
                                "amount": {"var": "data.ISO20022_MX.Document.FIDrctDbt.CdtInstr.DrctDbtTxInf.IntrBkSttlmAmt.$value"}
                            }
                        }
                    ]
                }
            }
        }
    ]
}
