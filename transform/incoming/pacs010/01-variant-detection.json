{
    "id": "pacs010-variant-detection",
    "name": "pacs.010 Variant Detection",
    "description": "Detects pacs.010 Margin Collection (MC) variant for MT204 transformation",
    "priority": 2,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "pacs.010"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "mx-parser"]},
        {"==": [{"var": "metadata.progress.task_id"}, "parse_mx_message"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "detect_variant",
            "name": "Detect pacs.010 Variant",
            "description": "Validates pacs.010 is Margin Collection variant for MT204 transformation",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "temp_data.variant",
                            "logic": { "if": [
                                { "and": [
                                    {"==": [{"var": "data.ISO20022_MX.AppHdr.BizSvc"}, "swift.cbprplus.02"]},
                                    {"var": "data.ISO20022_MX.Document.FIDrctDbt.CdtInstr"}
                                ]},
                                "MC",
                                "STANDARD"
                            ]}
                        },
                        {
                            "path": "data.SwiftMT",
                            "logic": {"message_type": "204", "variant": {"var": "temp_data.variant"}}
                        }
                    ]
                }
            }
        }
    ]
}
