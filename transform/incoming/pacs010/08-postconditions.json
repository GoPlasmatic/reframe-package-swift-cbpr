{
    "id": "pacs010-to-mt204-postconditions",
    "name": "pacs.010 to MT204 Post-conditions and Final Assembly",
    "description": "Validates post-conditions and assembles final MT204 message",
    "priority": 9,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "pacs.010"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "pacs010-to-mt204-sender-receiver-info"]},
        {
            "in": [
                {"var": "metadata.progress.task_id"},
                [
                    "prepare_field_72_components",
                    "map_field_72_seq_a",
                    "map_field_72_seq_b",
                    "complete_sender_receiver_info"
                ]
            ]
        },
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "publish_mt204",
            "name": "Publish MT204 Message",
            "description": "Publishes the complete MT204 message (handles POSTC001, POSTC002, POSTC003, POSTC004)",
            "function": {"name": "publish_mt", "input": {"source": "SwiftMT", "target": "result"}}
        }
    ]
}
