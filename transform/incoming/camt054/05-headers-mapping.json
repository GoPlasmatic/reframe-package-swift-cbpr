{
    "id": "camt054-headers-mapping",
    "name": "camt.054 Headers Mapping",
    "description": "Maps headers for all camt.054 variants (MT103 Advice, MT202 Advice, MT900, MT910)",
    "priority": 4,
    "condition": { "and": [
        {
            "in": [
                {"var": "metadata.SwiftMT.variant"},
                ["MT103_ADVICE", "MT202_ADVICE", "MT900", "MT910"]
            ]
        },
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.054"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"starts_with": [{"var": "metadata.progress.task_id"}, "validate_"]},
        {
            "in": [
                {"var": "metadata.progress.workflow_id"},
                [
                    "camt054-to-mt103-preconditions",
                    "camt054-to-mt202-preconditions",
                    "camt054-to-mt9x0-preconditions"
                ]
            ]
        },
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_basic_header",
            "name": "Map Basic Header",
            "description": "Maps sender and receiver BIC for all variants",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.basic_header",
                            "logic": {
                                "application_id": "F",
                                "service_id": "01",
                                "sender_bic": {
                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}, 0, 8]
                                },
                                "logical_terminal": { "if": [
                                    {"==": [{"length": {"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}}, 8]},
                                    {"cat": [{"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}, "AXXX"]},
                                    { "if": [
                                        {"==": [{"length": {"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}}, 11]},
                                        {
                                            "cat": [
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}, 0, 8]
                                                },
                                                "A",
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}, 8, 3]
                                                }
                                            ]
                                        },
                                        {
                                            "cat": [
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.Fr.FIId.FinInstnId.BICFI"}, 0, 8]
                                                },
                                                "AXXX"
                                            ]
                                        }
                                    ]}
                                ]},
                                "session_number": "0000",
                                "sequence_number": "000000"
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "map_application_header",
            "name": "Map Application Header",
            "description": "Maps application header specific to message type",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.application_header",
                            "logic": {
                                "direction": "I",
                                "message_type": {"var": "data.SwiftMT.message_type"},
                                "receiver_bic": {
                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}, 0, 8]
                                },
                                "destination_address": { "if": [
                                    {"==": [{"length": {"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}}, 8]},
                                    {"cat": [{"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}, "AXXX"]},
                                    { "if": [
                                        {"==": [{"length": {"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}}, 11]},
                                        {
                                            "cat": [
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}, 0, 8]
                                                },
                                                "A",
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}, 8, 3]
                                                }
                                            ]
                                        },
                                        {
                                            "cat": [
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.AppHdr.To.FIId.FinInstnId.BICFI"}, 0, 8]
                                                },
                                                "AXXX"
                                            ]
                                        }
                                    ]}
                                ]},
                                "priority": "N"
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "map_user_header",
            "name": "Map User Header",
            "description": "Maps user header with UETR for applicable message types",
            "condition": {"in": [{"var": "SwiftMT.variant"}, ["MT103_ADVICE", "MT202_ADVICE"]]},
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.user_header",
                            "logic": {"unique_end_to_end_reference": {"var": "temp_data.txn_path.Refs.UETR"}}
                        }
                    ]
                }
            }
        },
        {
            "id": "set_message_priority",
            "name": "Set Message Priority",
            "description": "Sets message priority based on amount for MT103 Advice",
            "condition": {"==": [{"var": "SwiftMT.variant"}, "MT103_ADVICE"]},
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.application_header.priority",
                            "logic": { "if": [
                                {">": [{"var": "temp_data.txn_path.Amt.$value"}, 1000000]},
                                "U",
                                "N"
                            ]}
                        }
                    ]
                }
            }
        }
    ]
}
