{
    "id": "camt054-to-mt103-fields-mapping",
    "name": "camt.054 to MT103 Advice Fields Mapping",
    "description": "Maps fields for MT103 Advice transformation",
    "priority": 5,
    "condition": { "and": [
        {"==": [{"var": "metadata.SwiftMT.variant"}, "MT103_ADVICE"]},
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "camt.054"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "camt054-headers-mapping"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "setup_transaction_path",
            "name": "Setup Transaction Path",
            "description": "Sets up the path to transaction details",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "temp_data.txn_path",
                            "logic": {"var": "data.ISO20022_MX.Document.BkToCstmrDbtCdtNtfctn.Ntfctn.0.Ntry.0.NtryDtls.0.TxDtls.0"}
                        }
                    ]
                }
            }
        },
        {
            "id": "map_reference_and_amount_fields",
            "name": "Map Reference and Amount Fields",
            "description": "Maps field 20, 21, 32A, 33B, 36",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#20",
                            "logic": {
                                "reference": { "if": [
                                    {"var": "temp_data.txn_path.Refs.AcctSvcrRef"},
                                    {
                                        "substr": [{"var": "temp_data.txn_path.Refs.AcctSvcrRef"}, 0, 16]
                                    },
                                    { "if": [
                                        {"var": "temp_data.txn_path.Refs.InstrId"},
                                        {
                                            "substr": [{"var": "temp_data.txn_path.Refs.InstrId"}, 0, 16]
                                        },
                                        { "if": [
                                            {"var": "temp_data.txn_path.Refs.EndToEndId"},
                                            {
                                                "substr": [{"var": "temp_data.txn_path.Refs.EndToEndId"}, 0, 16]
                                            },
                                            "NOTPROVIDED"
                                        ]}
                                    ]}
                                ]}
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.#21",
                            "logic": {"var": "temp_data.txn_path.Refs.UETR"}
                        },
                        {"path": "data.SwiftMT.fields.23B", "logic": {"instruction_code": "CRED"}},
                        {
                            "path": "data.SwiftMT.fields.32A",
                            "logic": {
                                "value_date": {"var": "temp_data.txn_path.RltdDts.IntrBkSttlmDt"},
                                "currency": {"var": "temp_data.txn_path.Amt.@Ccy"},
                                "amount": {"var": "temp_data.txn_path.Amt.$value"}
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.33B",
                            "condition": {"!!": {"var": "temp_data.txn_path.AmtDtls.InstdAmt.Amt"}},
                            "logic": {
                                "currency": {"var": "temp_data.txn_path.AmtDtls.InstdAmt.Amt.@Ccy"},
                                "amount": {"var": "temp_data.txn_path.AmtDtls.InstdAmt.Amt.$value"}
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.#36",
                            "condition": {"!!": {"var": "temp_data.txn_path.AmtDtls.InstdAmt.CcyXchg.XchgRate"}},
                            "logic": {"rate": {"var": "temp_data.txn_path.AmtDtls.InstdAmt.CcyXchg.XchgRate"}}
                        }
                    ]
                }
            }
        },
        {
            "id": "map_charge_fields",
            "name": "Map Charge Fields",
            "description": "Maps fields 71A and 71F",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.71A",
                            "logic": {
                                "code": { "if": [
                                    {"var": "temp_data.txn_path.Chrgs.0.Br"},
                                    {"var": "temp_data.txn_path.Chrgs.0.Br"},
                                    "SHA"
                                ]}
                            }
                        },
                        {
                            "path": "data.SwiftMT.fields.71F",
                            "logic": { "if": [
                                {"var": "temp_data.txn_path.Chrgs.0.Amt"},
                                {
                                    "currency": {"var": "temp_data.txn_path.Chrgs.0.Amt.@Ccy"},
                                    "amount": {"var": "temp_data.txn_path.Chrgs.0.Amt.$value"}
                                },
                                null
                            ]}
                        }
                    ]
                }
            }
        },
        {
            "id": "map_ordering_customer",
            "name": "Map Ordering Customer (Field 50)",
            "description": "Maps debtor to Field 50 (A/F/K variants)",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.50A",
                            "logic": { "if": [
                                { "and": [
                                    {"var": "temp_data.txn_path.RltdPties.Dbtr.Agt"},
                                    {"var": "temp_data.txn_path.RltdPties.Dbtr.Agt.FinInstnId.BICFI"}
                                ]},
                                { "if": [
                                    {"var": "temp_data.txn_path.RltdPties.Dbtr.Pty.Id.OrgId.Othr.0.Id"},
                                    {
                                        "account": {"var": "temp_data.txn_path.RltdPties.Dbtr.Pty.Id.OrgId.Othr.0.Id"},
                                        "identifier_code": {"var": "temp_data.txn_path.RltdPties.Dbtr.Agt.FinInstnId.BICFI"}
                                    },
                                    {"identifier_code": {"var": "temp_data.txn_path.RltdPties.Dbtr.Agt.FinInstnId.BICFI"}}
                                ]},
                                null
                            ]}
                        },
                        {
                            "path": "data.SwiftMT.fields.50F",
                            "logic": { "if": [
                                { "and": [
                                    {"var": "temp_data.txn_path.RltdPties.Dbtr.Agt"},
                                    {"!": {"var": "temp_data.txn_path.RltdPties.Dbtr.Agt.FinInstnId.BICFI"}},
                                    {"var": "temp_data.txn_path.RltdPties.Dbtr.Agt.FinInstnId.ClrSysMmbId.MmbId"}
                                ]},
                                {
                                    "party_identifier": {
                                        "cat": [
                                            "/",
                                            {"var": "temp_data.txn_path.RltdPties.Dbtr.Agt.FinInstnId.ClrSysMmbId.MmbId"}
                                        ]
                                    },
                                    "name_and_address": [{"var": "temp_data.txn_path.RltdPties.Dbtr.Agt.FinInstnId.Nm"}]
                                },
                                { "if": [
                                    { "and": [
                                        {"!": {"var": "temp_data.txn_path.RltdPties.Dbtr.Agt"}},
                                        {"var": "temp_data.txn_path.RltdPties.Dbtr.Pty.Id.OrgId.LEI"}
                                    ]},
                                    {
                                        "party_identifier": {"cat": ["/", {"var": "temp_data.txn_path.RltdPties.Dbtr.Pty.Id.OrgId.LEI"}]},
                                        "name_and_address": [{"var": "temp_data.txn_path.RltdPties.Dbtr.Pty.Nm"}]
                                    },
                                    null
                                ]}
                            ]}
                        },
                        {
                            "path": "data.SwiftMT.fields.50K",
                            "logic": { "if": [
                                { "and": [
                                    {"!": {"var": "temp_data.txn_path.RltdPties.Dbtr.Agt"}},
                                    {"!": {"var": "temp_data.txn_path.RltdPties.Dbtr.Pty.Id.OrgId.LEI"}},
                                    {"var": "temp_data.txn_path.RltdPties.Dbtr.Pty.Nm"}
                                ]},
                                { "if": [
                                    {"var": "temp_data.txn_path.RltdPties.Dbtr.Pty.Id.OrgId.Othr.0.Id"},
                                    {
                                        "account": {"var": "temp_data.txn_path.RltdPties.Dbtr.Pty.Id.OrgId.Othr.0.Id"},
                                        "name_and_address": [{"var": "temp_data.txn_path.RltdPties.Dbtr.Pty.Nm"}]
                                    },
                                    {"name_and_address": [{"var": "temp_data.txn_path.RltdPties.Dbtr.Pty.Nm"}]}
                                ]},
                                null
                            ]}
                        }
                    ]
                }
            }
        },
        {
            "id": "map_beneficiary",
            "name": "Map Beneficiary (Field 59)",
            "description": "Maps creditor to Field 59 (A/no-letter variants)",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.59A",
                            "logic": { "if": [
                                { "and": [
                                    {"var": "temp_data.txn_path.RltdPties.Cdtr.Agt"},
                                    {"var": "temp_data.txn_path.RltdPties.Cdtr.Agt.FinInstnId.BICFI"}
                                ]},
                                {
                                    "identifier_code": {"var": "temp_data.txn_path.RltdPties.Cdtr.Agt.FinInstnId.BICFI"},
                                    "name_and_address": [{"var": "temp_data.txn_path.RltdPties.Cdtr.Agt.FinInstnId.Nm"}]
                                },
                                null
                            ]}
                        },
                        {
                            "path": "data.SwiftMT.fields.#59",
                            "logic": { "if": [
                                { "and": [
                                    {"var": "temp_data.txn_path.RltdPties.Cdtr.Agt"},
                                    {"!": {"var": "temp_data.txn_path.RltdPties.Cdtr.Agt.FinInstnId.BICFI"}},
                                    {"var": "temp_data.txn_path.RltdPties.Cdtr.Agt.FinInstnId.ClrSysMmbId.MmbId"}
                                ]},
                                {
                                    "account": {
                                        "cat": [
                                            "/",
                                            {"var": "temp_data.txn_path.RltdPties.Cdtr.Agt.FinInstnId.ClrSysMmbId.MmbId"}
                                        ]
                                    },
                                    "name_and_address": [{"var": "temp_data.txn_path.RltdPties.Cdtr.Agt.FinInstnId.Nm"}]
                                },
                                { "if": [
                                    { "and": [
                                        {"!": {"var": "temp_data.txn_path.RltdPties.Cdtr.Agt"}},
                                        {"var": "temp_data.txn_path.RltdPties.Cdtr.Pty.Nm"}
                                    ]},
                                    { "if": [
                                        {"var": "temp_data.txn_path.RltdPties.Cdtr.Pty.Id.OrgId.Othr.0.Id"},
                                        {
                                            "account": {"var": "temp_data.txn_path.RltdPties.Cdtr.Pty.Id.OrgId.Othr.0.Id"},
                                            "name_and_address": [{"var": "temp_data.txn_path.RltdPties.Cdtr.Pty.Nm"}]
                                        },
                                        {"name_and_address": [{"var": "temp_data.txn_path.RltdPties.Cdtr.Pty.Nm"}]}
                                    ]},
                                    null
                                ]}
                            ]}
                        }
                    ]
                }
            }
        },
        {
            "id": "map_agent_fields",
            "name": "Map Agent Fields",
            "description": "Maps ordering institution and intermediary agents",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.52A",
                            "logic": { "if": [
                                {"var": "temp_data.txn_path.RltdAgts.DbtrAgt.FinInstnId.BICFI"},
                                {"bic": {"var": "temp_data.txn_path.RltdAgts.DbtrAgt.FinInstnId.BICFI"}},
                                null
                            ]}
                        },
                        {
                            "path": "data.SwiftMT.fields.53A",
                            "logic": { "if": [
                                {"var": "temp_data.txn_path.RltdAgts.IntrmyAgt1.FinInstnId.BICFI"},
                                {"bic": {"var": "temp_data.txn_path.RltdAgts.IntrmyAgt1.FinInstnId.BICFI"}},
                                null
                            ]}
                        },
                        {
                            "path": "data.SwiftMT.fields.54A",
                            "logic": { "if": [
                                {"var": "temp_data.txn_path.RltdAgts.IntrmyAgt2.FinInstnId.BICFI"},
                                {"bic": {"var": "temp_data.txn_path.RltdAgts.IntrmyAgt2.FinInstnId.BICFI"}},
                                null
                            ]}
                        },
                        {
                            "path": "data.SwiftMT.fields.55A",
                            "logic": { "if": [
                                {"var": "temp_data.txn_path.RltdAgts.IntrmyAgt3.FinInstnId.BICFI"},
                                {"bic": {"var": "temp_data.txn_path.RltdAgts.IntrmyAgt3.FinInstnId.BICFI"}},
                                null
                            ]}
                        },
                        {
                            "path": "data.SwiftMT.fields.57A",
                            "logic": { "if": [
                                {"var": "temp_data.txn_path.RltdAgts.CdtrAgt.FinInstnId.BICFI"},
                                {"bic": {"var": "temp_data.txn_path.RltdAgts.CdtrAgt.FinInstnId.BICFI"}},
                                { "if": [
                                    {"var": "temp_data.txn_path.RltdPties.Cdtr.Agt.FinInstnId.BICFI"},
                                    {"bic": {"var": "temp_data.txn_path.RltdPties.Cdtr.Agt.FinInstnId.BICFI"}},
                                    null
                                ]}
                            ]}
                        }
                    ]
                }
            }
        },
        {
            "id": "map_remittance_info",
            "name": "Map Remittance Information",
            "description": "Maps remittance information to Field 70",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#70",
                            "condition": {"!!": {"var": "temp_data.txn_path.RmtInf.Ustrd"}},
                            "logic": {
                                "narrative": { "if": [
                                    {"var": "temp_data.txn_path.RmtInf.Ustrd"},
                                    {"slice": [[{"var": "temp_data.txn_path.RmtInf.Ustrd"}], 0, 4]},
                                    []
                                ]}
                            }
                        }
                    ]
                }
            }
        }
    ]
}
