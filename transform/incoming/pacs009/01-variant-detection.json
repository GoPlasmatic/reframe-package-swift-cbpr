{
    "id": "pacs009-variant-detection",
    "name": "pacs.009 Variant Detection",
    "description": "Detects whether pacs.009 is CORE, COVE, or ADV variant based on message content",
    "priority": 2,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "pacs.009"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "mx-parser"]},
        {"==": [{"var": "metadata.progress.task_id"}, "parse_mx_message"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "detect_pacs009_variant",
            "name": "Detect pacs.009 Variant",
            "description": "Determine if message is CORE, COVE, or ADV variant based on presence of specific elements",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "temp_data.has_underlying_customer",
                            "logic": { "or": [
                                {"var": "data.ISO20022_MX.Document.FICdtTrf.CdtTrfTxInf.UndrlygCstmrCdtTrf"},
                                {"var": "data.ISO20022_MX.Document.FICdtTrf.CdtTrfTxInf.UltmtDbtr"},
                                {"var": "data.ISO20022_MX.Document.FICdtTrf.CdtTrfTxInf.UltmtCdtr"},
                                {"==": [{"var": "data.ISO20022_MX.Document.FICdtTrf.CdtTrfTxInf.PmtTpInf.LclInstrm.Cd"}, "COVE"]},
                                {"==": [{"var": "data.ISO20022_MX.Document.FICdtTrf.CdtTrfTxInf.PmtTpInf.LclInstrm.Cd"}, "COVER"]}
                            ]}
                        },
                        {
                            "path": "temp_data.has_reimbursement_agents",
                            "logic": { "or": [
                                {"var": "data.ISO20022_MX.Document.FICdtTrf.GrpHdr.SttlmInf.InstgRmbrsmntAgt"},
                                {"var": "data.ISO20022_MX.Document.FICdtTrf.GrpHdr.SttlmInf.InstdRmbrsmntAgt"}
                            ]}
                        },
                        {
                            "path": "temp_data.is_advice",
                            "logic": { "or": [
                                {"==": [{"var": "data.ISO20022_MX.Document.FICdtTrf.CdtTrfTxInf.PmtTpInf.LclInstrm.Cd"}, "ADVICE"]},
                                {"==": [{"var": "data.ISO20022_MX.Document.FICdtTrf.CdtTrfTxInf.PmtTpInf.LclInstrm.Cd"}, "ADV"]}
                            ]}
                        },
                        {
                            "path": "temp_data.has_settlement_account",
                            "logic": {"var": "data.ISO20022_MX.Document.FICdtTrf.GrpHdr.SttlmInf.SttlmAcct"}
                        },
                        {
                            "path": "temp_data.pacs009_variant",
                            "logic": { "if": [
                                {"var": "temp_data.has_underlying_customer"},
                                "COVE",
                                { "if": [
                                    { "or": [
                                        {"var": "temp_data.has_reimbursement_agents"},
                                        {"var": "temp_data.is_advice"}
                                    ]},
                                    "ADV",
                                    "CORE"
                                ]}
                            ]}
                        },
                        {
                            "path": "temp_data.target_mt_type",
                            "logic": { "if": [
                                {"==": [{"var": "temp_data.pacs009_variant"}, "COVE"]},
                                "202COV",
                                "202"
                            ]}
                        }
                    ]
                }
            }
        }
    ]
}
