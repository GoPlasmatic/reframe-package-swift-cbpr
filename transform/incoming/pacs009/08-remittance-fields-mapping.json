{
    "id": "pacs009-to-mt202-remittance-fields",
    "name": "pacs.009 to MT202 Remittance Fields Mapping",
    "description": "Maps remittance information from pacs.009 to MT202 Field 72 according to CBPR+ specification",
    "priority": 9,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "pacs.009"]},
        {"==": [{"var": "metadata.direction"}, "incoming"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "pacs009-to-mt202-agent-fields"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_field_58"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_field_72",
            "name": "Map Field 72 - Sender to Receiver Information",
            "description": "Map instruction information to Field 72",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#72",
                            "logic": {
                                "value": { "if": [
                                    {"var": "data.ISO20022_MX.Document.FICdtTrf.CdtTrfTxInf.InstrForNxtAgt.InstrInf"},
                                    {"var": "data.ISO20022_MX.Document.FICdtTrf.CdtTrfTxInf.InstrForNxtAgt.InstrInf"},
                                    null
                                ]}
                            }
                        }
                    ]
                }
            }
        }
    ]
}
