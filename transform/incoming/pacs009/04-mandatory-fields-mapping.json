{
    "id": "pacs009-to-mt202-mandatory-fields",
    "name": "pacs.009 to MT202 Mandatory Fields Mapping",
    "description": "Maps mandatory fields from pacs.009 to MT202 message according to CBPR+ specification",
    "priority": 5,
    "condition": { "and": [
        {"==": [{"var": "metadata.ISO20022_MX.message_type"}, "pacs.009"]},
        {"==": [{"var": "metadata.transformation_direction"}, "mx-to-mt"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "pacs009-to-mt202-headers"]},
        {"==": [{"var": "metadata.progress.task_id"}, "map_user_header"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "map_field_20",
            "name": "Map Field 20 - Sender's Reference",
            "description": "Map instruction identification to Field 20 (Copy)",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#20",
                            "logic": {
                                "reference": { "if": [
                                    {"var": "data.ISO20022_MX.Document.FICdtTrf.CdtTrfTxInf.PmtId.InstrId"},
                                    {"var": "data.ISO20022_MX.Document.FICdtTrf.CdtTrfTxInf.PmtId.InstrId"},
                                    "NOTPROVIDED"
                                ]}
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "map_field_21",
            "name": "Map Field 21 - Related Reference",
            "description": "Map end-to-end identification to Field 21 with validation (TR005)",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.#21",
                            "logic": {
                                "reference": { "if": [
                                    {"var": "data.ISO20022_MX.Document.FICdtTrf.CdtTrfTxInf.PmtId.EndToEndId"},
                                    { "if": [
                                        {">": [{"length": {"var": "data.ISO20022_MX.Document.FICdtTrf.CdtTrfTxInf.PmtId.EndToEndId"}}, 16]},
                                        {
                                            "cat": [
                                                {
                                                    "substr": [{"var": "data.ISO20022_MX.Document.FICdtTrf.CdtTrfTxInf.PmtId.EndToEndId"}, 0, 15]
                                                },
                                                "+"
                                            ]
                                        },
                                        {"var": "data.ISO20022_MX.Document.FICdtTrf.CdtTrfTxInf.PmtId.EndToEndId"}
                                    ]},
                                    "NOTPROVIDED"
                                ]}
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "map_field_32a",
            "name": "Map Field 32A - Value Date/Currency/Amount",
            "description": "Map interbank settlement date, currency and amount to Field 32A (TR002)",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.SwiftMT.fields.32A.value_date",
                            "logic": { "if": [
                                {"var": "data.ISO20022_MX.Document.FICdtTrf.CdtTrfTxInf.IntrBkSttlmDt"},
                                {
                                    "substr": [{"var": "data.ISO20022_MX.Document.FICdtTrf.CdtTrfTxInf.IntrBkSttlmDt"}, 0, 10]
                                },
                                null
                            ]}
                        },
                        {
                            "path": "data.SwiftMT.fields.32A.currency",
                            "logic": { "if": [
                                {"var": "data.ISO20022_MX.Document.FICdtTrf.CdtTrfTxInf.IntrBkSttlmAmt.@Ccy"},
                                {"var": "data.ISO20022_MX.Document.FICdtTrf.CdtTrfTxInf.IntrBkSttlmAmt.@Ccy"},
                                null
                            ]}
                        },
                        {
                            "path": "data.SwiftMT.fields.32A.amount",
                            "logic": { "if": [
                                {"var": "data.ISO20022_MX.Document.FICdtTrf.CdtTrfTxInf.IntrBkSttlmAmt.$value"},
                                {"var": "data.ISO20022_MX.Document.FICdtTrf.CdtTrfTxInf.IntrBkSttlmAmt.$value"},
                                null
                            ]}
                        }
                    ]
                }
            }
        }
    ]
}
