{
    "id": "mt200-bah-mapper",
    "name": "MT200 Business Application Header Mapping for CBPR+",
    "description": "Maps MT200 message to ISO 20022 Business Application Header (AppHdr) using head.001.001.02 schema for FI Transfer for Own Account",
    "priority": 2,
    "condition": { "and": [
        {"==": [{"var": "metadata.SwiftMT.message_type"}, "200"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "parser"]},
        {"==": [{"var": "metadata.progress.task_id"}, "parse_mt_message"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "construct_business_application_header",
            "name": "Construct Business Application Header with Context and Related Metadata",
            "description": "Builds complete CBPR+ business application header with sender/receiver extraction and related message metadata for MT200 FI Transfer for Own Account",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.MxEnvelope.AppHdr",
                            "logic": {
                                "Fr": {
                                    "FIId": {
                                        "FinInstnId": {
                                            "BICFI": { "if": [
                                                {"var": "data.SwiftMT.basic_header.sender_bic"},
                                                {"var": "data.SwiftMT.basic_header.sender_bic"},
                                                "NOTPROVIDED"
                                            ]}
                                        }
                                    }
                                },
                                "To": {
                                    "FIId": {
                                        "FinInstnId": {
                                            "BICFI": { "if": [
                                                {"var": "data.SwiftMT.application_header.receiver_bic"},
                                                {"var": "data.SwiftMT.application_header.receiver_bic"},
                                                "NOTPROVIDED"
                                            ]}
                                        }
                                    }
                                },
                                "BizMsgIdr": { "if": [
                                    {"var": "data.SwiftMT.fields.20.reference"},
                                    {"var": "data.SwiftMT.fields.20.reference"},
                                    "NOTPROVIDED"
                                ]},
                                "MsgDefIdr": "pacs.009.001.08",
                                "BizSvc": "swift.cbprplus.02",
                                "CreDt": { "if": [
                                    {"var": "data.SwiftMT.fields.32A.value_date"},
                                    {"cat": [{"var": "data.SwiftMT.fields.32A.value_date"}, "T00:00:00+00:00"]},
                                    "9999-12-31T00:00:00+00:00"
                                ]},
                                "CpyDplct": "CODU",
                                "PssblDplct": false,
                                "Prty": "NORM",
                                "Rltd": {
                                    "Fr": {
                                        "FIId": {
                                            "FinInstnId": {
                                                "BICFI": { "if": [
                                                    {"var": "data.SwiftMT.basic_header.sender_bic"},
                                                    {"var": "data.SwiftMT.basic_header.sender_bic"},
                                                    "NOTPROVIDED"
                                                ]}
                                            }
                                        }
                                    },
                                    "To": {
                                        "FIId": {
                                            "FinInstnId": {
                                                "BICFI": { "if": [
                                                    {"var": "data.SwiftMT.application_header.receiver_bic"},
                                                    {"var": "data.SwiftMT.application_header.receiver_bic"},
                                                    "NOTPROVIDED"
                                                ]}
                                            }
                                        }
                                    },
                                    "MsgDefIdr": "pacs.009.001.08",
                                    "BizMsgIdr": { "if": [
                                        {"var": "data.SwiftMT.fields.20.reference"},
                                        {"var": "data.SwiftMT.fields.20.reference"},
                                        "NOTPROVIDED"
                                    ]},
                                    "CreDt": { "if": [
                                        {"var": "data.SwiftMT.fields.32A.value_date"},
                                        {"cat": [{"var": "data.SwiftMT.fields.32A.value_date"}, "T00:00:00+00:00"]},
                                        "9999-12-31T00:00:00+00:00"
                                    ]}
                                }
                            }
                        },
                        {
                            "path": "temp_data.Sender",
                            "logic": { "if": [
                                {"var": "data.SwiftMT.basic_header.sender_bic"},
                                {"var": "data.SwiftMT.basic_header.sender_bic"},
                                "NOTPROVIDED"
                            ]}
                        },
                        {
                            "path": "temp_data.Receiver",
                            "logic": { "if": [
                                {"var": "data.SwiftMT.application_header.receiver_bic"},
                                {"var": "data.SwiftMT.application_header.receiver_bic"},
                                "NOTPROVIDED"
                            ]}
                        },
                        {
                            "path": "temp_data.UETR",
                            "logic": { "if": [
                                {"var": "data.SwiftMT.user_header.unique_end_to_end_reference"},
                                {"var": "data.SwiftMT.user_header.unique_end_to_end_reference"},
                                null
                            ]}
                        }
                    ]
                }
            }
        }
    ]
}
