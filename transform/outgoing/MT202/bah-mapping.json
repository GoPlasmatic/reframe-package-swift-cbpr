{
    "id": "mt202-bah-mapper",
    "name": "MT202 Business Application Header Mapping for CBPR+",
    "description": "Maps MT202 message to ISO 20022 Business Application Header (AppHdr) using head.001.001.02 schema",
    "priority": 3,
    "condition": { "and": [
        {"==": [{"var": "metadata.SwiftMT.message_type"}, "202"]},
        {"==": [{"var": "metadata.SwiftMT.method"}, "normal"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "mt202-method-detector"]},
        {"==": [{"var": "metadata.progress.task_id"}, "detect_mt202_method"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "construct_business_application_header",
            "name": "Construct Business Application Header with Context and Related Metadata",
            "description": "Builds complete CBPR+ business application header with sender/receiver extraction (with fallback to fields 52A/58A and 52D/58D) and related message metadata for MT202",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.MxEnvelope.AppHdr",
                            "logic": {
                                "Fr": {
                                    "FIId": {
                                        "FinInstnId": {
                                            "BICFI": { "if": [
                                                {"var": "data.SwiftMT.basic_header.sender_bic"},
                                                {"var": "data.SwiftMT.basic_header.sender_bic"},
                                                { "if": [
                                                    {"var": "data.SwiftMT.fields.52.A.bic"},
                                                    {"var": "data.SwiftMT.fields.52.A.bic"},
                                                    { "if": [
                                                        {"var": "data.SwiftMT.fields.52.D.name_and_address"},
                                                        null,
                                                        "NOTPROVIDED"
                                                    ]}
                                                ]}
                                            ]}
                                        }
                                    }
                                },
                                "To": {
                                    "FIId": {
                                        "FinInstnId": {
                                            "BICFI": { "if": [
                                                {"var": "data.SwiftMT.application_header.receiver_bic"},
                                                {"var": "data.SwiftMT.application_header.receiver_bic"},
                                                { "if": [
                                                    {"var": "data.SwiftMT.fields.58.A.bic"},
                                                    {"var": "data.SwiftMT.fields.58.A.bic"},
                                                    { "if": [
                                                        {"var": "data.SwiftMT.fields.58.D.name_and_address"},
                                                        null,
                                                        "NOTPROVIDED"
                                                    ]}
                                                ]}
                                            ]}
                                        }
                                    }
                                },
                                "BizMsgIdr": { "if": [
                                    {"var": "data.SwiftMT.fields.20.reference"},
                                    {"var": "data.SwiftMT.fields.20.reference"},
                                    "NOTPROVIDED"
                                ]},
                                "MsgDefIdr": "pacs.009.001.08",
                                "BizSvc": "swift.cbprplus.02",
                                "CreDt": { "if": [
                                    {"var": "data.SwiftMT.fields.32A.value_date"},
                                    {"cat": [{"var": "data.SwiftMT.fields.32A.value_date"}, "T00:00:00+00:00"]},
                                    "9999-12-31T00:00:00+00:00"
                                ]},
                                "CpyDplct": "CODU",
                                "PssblDplct": false,
                                "Prty": "NORM",
                                "Rltd": {
                                    "Fr": {
                                        "FIId": {
                                            "FinInstnId": {
                                                "BICFI": { "if": [
                                                    {"var": "data.SwiftMT.basic_header.sender_bic"},
                                                    {"var": "data.SwiftMT.basic_header.sender_bic"},
                                                    { "if": [
                                                        {"var": "data.SwiftMT.fields.52.A.bic"},
                                                        {"var": "data.SwiftMT.fields.52.A.bic"},
                                                        { "if": [
                                                            {"var": "data.SwiftMT.fields.52.D.name_and_address"},
                                                            null,
                                                            "NOTPROVIDED"
                                                        ]}
                                                    ]}
                                                ]}
                                            }
                                        }
                                    },
                                    "To": {
                                        "FIId": {
                                            "FinInstnId": {
                                                "BICFI": { "if": [
                                                    {"var": "data.SwiftMT.application_header.receiver_bic"},
                                                    {"var": "data.SwiftMT.application_header.receiver_bic"},
                                                    { "if": [
                                                        {"var": "data.SwiftMT.fields.58.A.bic"},
                                                        {"var": "data.SwiftMT.fields.58.A.bic"},
                                                        { "if": [
                                                            {"var": "data.SwiftMT.fields.58.D.name_and_address"},
                                                            null,
                                                            "NOTPROVIDED"
                                                        ]}
                                                    ]}
                                                ]}
                                            }
                                        }
                                    },
                                    "MsgDefIdr": "pacs.009.001.08",
                                    "BizMsgIdr": { "if": [
                                        {"var": "data.SwiftMT.fields.20.reference"},
                                        {"var": "data.SwiftMT.fields.20.reference"},
                                        "NOTPROVIDED"
                                    ]},
                                    "CreDt": { "if": [
                                        {"var": "data.SwiftMT.fields.32A.value_date"},
                                        {"cat": [{"var": "data.SwiftMT.fields.32A.value_date"}, "T00:00:00+00:00"]},
                                        "9999-12-31T00:00:00+00:00"
                                    ]}
                                }
                            }
                        },
                        {
                            "path": "temp_data.Sender",
                            "logic": { "if": [
                                {"var": "data.SwiftMT.basic_header.sender_bic"},
                                {"var": "data.SwiftMT.basic_header.sender_bic"},
                                { "if": [
                                    {"var": "data.SwiftMT.fields.52.A.bic"},
                                    {"var": "data.SwiftMT.fields.52.A.bic"},
                                    { "if": [
                                        {"var": "data.SwiftMT.fields.52.D.name_and_address"},
                                        null,
                                        "NOTPROVIDED"
                                    ]}
                                ]}
                            ]}
                        },
                        {
                            "path": "temp_data.Receiver",
                            "logic": { "if": [
                                {"var": "data.SwiftMT.application_header.receiver_bic"},
                                {"var": "data.SwiftMT.application_header.receiver_bic"},
                                { "if": [
                                    {"var": "data.SwiftMT.fields.58.A.bic"},
                                    {"var": "data.SwiftMT.fields.58.A.bic"},
                                    { "if": [
                                        {"var": "data.SwiftMT.fields.58.D.name_and_address"},
                                        null,
                                        "NOTPROVIDED"
                                    ]}
                                ]}
                            ]}
                        }
                    ]
                }
            }
        }
    ]
}
