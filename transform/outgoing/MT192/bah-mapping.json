{
    "id": "mt192-bah-mapper",
    "name": "MT192 Business Application Header Mapping for CBPR+",
    "description": "Maps MT192 message to ISO 20022 Business Application Header (AppHdr) using head.001.001.02 schema for camt.056 cancellation request",
    "priority": 2,
    "condition": { "and": [
        {"==": [{"var": "metadata.direction"}, "outgoing"]},
        {"==": [{"var": "metadata.SwiftMT.message_type"}, "192"]},
        {"==": [{"var": "metadata.SwiftMT.method"}, "normal"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "parser"]},
        {"==": [{"var": "metadata.progress.task_id"}, "parse_mt_message"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "construct_business_application_header",
            "name": "Construct Business Application Header with Context",
            "description": "Builds CBPR+ business application header with sender/receiver extraction and message metadata for MT192 cancellation requests",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.MxEnvelope.AppHdr",
                            "logic": {
                                "Fr": {
                                    "FIId": {
                                        "FinInstnId": {
                                            "BICFI": { "if": [
                                                {"var": "data.SwiftMT.basic_header.sender_bic"},
                                                {"var": "data.SwiftMT.basic_header.sender_bic"},
                                                "NOTPROVIDED"
                                            ]}
                                        }
                                    }
                                },
                                "To": {
                                    "FIId": {
                                        "FinInstnId": {
                                            "BICFI": { "if": [
                                                {"var": "data.SwiftMT.application_header.receiver_bic"},
                                                {"var": "data.SwiftMT.application_header.receiver_bic"},
                                                "NOTPROVIDED"
                                            ]}
                                        }
                                    }
                                },
                                "BizMsgIdr": {
                                    "cat": [
                                        { "if": [
                                            {"var": "data.SwiftMT.fields.20.reference"},
                                            {"var": "data.SwiftMT.fields.20.reference"},
                                            "NOTPROVIDED"
                                        ]},
                                        "-camt.056-001"
                                    ]
                                },
                                "MsgDefIdr": "camt.056.001.08",
                                "BizSvc": "swift.cbprplus.02",
                                "CreDt": { "if": [
                                    {"var": "data.SwiftMT.fields.13C.time_indication"},
                                    {
                                        "cat": [
                                            { "if": [
                                                {"var": "data.SwiftMT.fields.32A.value_date"},
                                                {"var": "data.SwiftMT.fields.32A.value_date"},
                                                {
                                                    "substr": [{"var": "data.SwiftMT.fields.13C.time_indication"}, 0, 6]
                                                }
                                            ]},
                                            "T",
                                            { "if": [
                                                {"var": "data.SwiftMT.fields.13C.time_indication"},
                                                {
                                                    "cat": [
                                                        {
                                                            "substr": [{"var": "data.SwiftMT.fields.13C.time_indication"}, 6, 2]
                                                        },
                                                        ":",
                                                        {
                                                            "substr": [{"var": "data.SwiftMT.fields.13C.time_indication"}, 8, 2]
                                                        },
                                                        ":00"
                                                    ]
                                                },
                                                "00:00:00"
                                            ]},
                                            "+00:00"
                                        ]
                                    },
                                    "9999-12-31T00:00:00+00:00"
                                ]},
                                "CpyDplct": "CODU",
                                "PssblDplct": false,
                                "Prty": "NORM"
                            }
                        },
                        {
                            "path": "temp_data.Sender",
                            "logic": { "if": [
                                {"var": "data.SwiftMT.basic_header.sender_bic"},
                                {"var": "data.SwiftMT.basic_header.sender_bic"},
                                "NOTPROVIDED"
                            ]}
                        },
                        {
                            "path": "temp_data.Receiver",
                            "logic": { "if": [
                                {"var": "data.SwiftMT.application_header.receiver_bic"},
                                {"var": "data.SwiftMT.application_header.receiver_bic"},
                                "NOTPROVIDED"
                            ]}
                        }
                    ]
                }
            }
        }
    ]
}
