{
    "id": "mt196-bah-mapper",
    "name": "MT196 Business Application Header Mapping for CBPR+",
    "description": "Maps MT196 message to ISO 20022 Business Application Header (AppHdr) using head.001.001.02 schema for camt.029 resolution message",
    "priority": 2,
    "condition": { "and": [
        {"==": [{"var": "metadata.SwiftMT.message_type"}, "196"]},
        {"==": [{"var": "metadata.SwiftMT.method"}, "normal"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "parser"]},
        {"==": [{"var": "metadata.progress.task_id"}, "parse_mt_message"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "construct_business_application_header",
            "name": "Construct Business Application Header with Context and Metadata",
            "description": "Builds complete CBPR+ business application header with sender/receiver extraction and related message metadata",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.MxEnvelope.AppHdr",
                            "logic": {
                                "Fr": {
                                    "FIId": {
                                        "FinInstnId": {
                                            "BICFI": { "if": [
                                                {"var": "data.MxEnvelope.AppHdr.Fr.FIId.FinInstnId.BICFI"},
                                                {"var": "data.MxEnvelope.AppHdr.Fr.FIId.FinInstnId.BICFI"},
                                                { "if": [
                                                    {"var": "data.SwiftMT.basic_header.sender_bic"},
                                                    {"var": "data.SwiftMT.basic_header.sender_bic"},
                                                    "NOTPROVIDED"
                                                ]}
                                            ]}
                                        }
                                    }
                                },
                                "To": {
                                    "FIId": {
                                        "FinInstnId": {
                                            "BICFI": { "if": [
                                                {"var": "data.MxEnvelope.AppHdr.To.FIId.FinInstnId.BICFI"},
                                                {"var": "data.MxEnvelope.AppHdr.To.FIId.FinInstnId.BICFI"},
                                                { "if": [
                                                    {"var": "data.SwiftMT.application_header.receiver_bic"},
                                                    {"var": "data.SwiftMT.application_header.receiver_bic"},
                                                    "NOTPROVIDED"
                                                ]}
                                            ]}
                                        }
                                    }
                                },
                                "BizMsgIdr": {
                                    "cat": [
                                        { "if": [
                                            {"var": "data.SwiftMT.fields.20.reference"},
                                            {"var": "data.SwiftMT.fields.20.reference"},
                                            "NOTPROVIDED"
                                        ]},
                                        "-camt.029-001"
                                    ]
                                },
                                "MsgDefIdr": "camt.029.001.09",
                                "BizSvc": "swift.cbprplus.02",
                                "CreDt": "9999-12-31T00:00:00+00:00",
                                "CpyDplct": "CODU",
                                "PssblDplct": false,
                                "Prty": "NORM",
                                "Rltd": {
                                    "Fr": {
                                        "FIId": {
                                            "FinInstnId": {
                                                "BICFI": { "if": [
                                                    {"var": "data.MxEnvelope.AppHdr.Fr.FIId.FinInstnId.BICFI"},
                                                    {"var": "data.MxEnvelope.AppHdr.Fr.FIId.FinInstnId.BICFI"},
                                                    { "if": [
                                                        {"var": "data.SwiftMT.basic_header.sender_bic"},
                                                        {"var": "data.SwiftMT.basic_header.sender_bic"},
                                                        "NOTPROVIDED"
                                                    ]}
                                                ]}
                                            }
                                        }
                                    },
                                    "To": {
                                        "FIId": {
                                            "FinInstnId": {
                                                "BICFI": { "if": [
                                                    {"var": "data.MxEnvelope.AppHdr.To.FIId.FinInstnId.BICFI"},
                                                    {"var": "data.MxEnvelope.AppHdr.To.FIId.FinInstnId.BICFI"},
                                                    { "if": [
                                                        {"var": "data.SwiftMT.application_header.receiver_bic"},
                                                        {"var": "data.SwiftMT.application_header.receiver_bic"},
                                                        "NOTPROVIDED"
                                                    ]}
                                                ]}
                                            }
                                        }
                                    },
                                    "MsgDefIdr": "camt.029.001.09",
                                    "BizMsgIdr": { "if": [
                                        {"var": "data.SwiftMT.fields.20.reference"},
                                        {"var": "data.SwiftMT.fields.20.reference"},
                                        "NOTPROVIDED"
                                    ]},
                                    "CreDt": { "if": [
                                        {"var": "data.SwiftMT.fields.13C.time_indication"},
                                        {
                                            "cat": [
                                                {
                                                    "substr": [{"var": "data.SwiftMT.fields.13C.time_indication"}, 0, 6]
                                                },
                                                "T",
                                                {"format_date": [{"now": []}, "HH:mm:ss"]},
                                                "+00:00"
                                            ]
                                        },
                                        "9999-12-31T00:00:00+00:00"
                                    ]}
                                }
                            }
                        },
                        {
                            "path": "temp_data.Sender",
                            "logic": { "if": [
                                {"var": "data.MxEnvelope.AppHdr.Fr.FIId.FinInstnId.BICFI"},
                                {"var": "data.MxEnvelope.AppHdr.Fr.FIId.FinInstnId.BICFI"},
                                { "if": [
                                    {"var": "data.SwiftMT.basic_header.sender_bic"},
                                    {"var": "data.SwiftMT.basic_header.sender_bic"},
                                    "NOTPROVIDED"
                                ]}
                            ]}
                        },
                        {
                            "path": "temp_data.Receiver",
                            "logic": { "if": [
                                {"var": "data.MxEnvelope.AppHdr.To.FIId.FinInstnId.BICFI"},
                                {"var": "data.MxEnvelope.AppHdr.To.FIId.FinInstnId.BICFI"},
                                { "if": [
                                    {"var": "data.SwiftMT.application_header.receiver_bic"},
                                    {"var": "data.SwiftMT.application_header.receiver_bic"},
                                    "NOTPROVIDED"
                                ]}
                            ]}
                        }
                    ]
                }
            }
        }
    ]
}
