{
    "id": "mt202-rejt-bah-mapper",
    "name": "MT202 REJT Business Application Header Mapping for CBPR+",
    "description": "Maps MT202 REJT message to ISO 20022 Business Application Header (AppHdr) using head.001.001.02 schema for pacs.002 payment reject",
    "priority": 3,
    "condition": { "and": [
        {"==": [{"var": "metadata.direction"}, "outgoing"]},
        {"==": [{"var": "metadata.SwiftMT.message_type"}, "202"]},
        {"==": [{"var": "metadata.SwiftMT.method"}, "reject"]},
        {"==": [{"var": "metadata.progress.workflow_id"}, "mt202-method-detector"]},
        {"==": [{"var": "metadata.progress.task_id"}, "detect_mt202_method"]},
        {"==": [{"var": "metadata.progress.status_code"}, 200]}
    ]},
    "tasks": [
        {
            "id": "construct_business_application_header",
            "name": "Construct Business Application Header with Related Metadata",
            "description": "Builds complete ISO 20022 Business Application Header with inline sender/receiver extraction and related message metadata for MT202 REJT",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.MxEnvelope.AppHdr",
                            "logic": {
                                "Fr": {
                                    "FIId": {
                                        "FinInstnId": {
                                            "BICFI": { "if": [
                                                {"var": "data.SwiftMT.basic_header.sender_bic"},
                                                {"var": "data.SwiftMT.basic_header.sender_bic"},
                                                { "if": [
                                                    {"var": "data.SwiftMT.fields.52.A.bic"},
                                                    {"var": "data.SwiftMT.fields.52.A.bic"},
                                                    "NOTPROVIDED"
                                                ]}
                                            ]}
                                        }
                                    }
                                },
                                "To": {
                                    "FIId": {
                                        "FinInstnId": {
                                            "BICFI": { "if": [
                                                {"var": "data.SwiftMT.application_header.receiver_bic"},
                                                {"var": "data.SwiftMT.application_header.receiver_bic"},
                                                { "if": [
                                                    {"var": "data.SwiftMT.fields.58.A.bic"},
                                                    {"var": "data.SwiftMT.fields.58.A.bic"},
                                                    "NOTPROVIDED"
                                                ]}
                                            ]}
                                        }
                                    }
                                },
                                "BizMsgIdr": {"cat": [{"var": "data.SwiftMT.fields.20.reference"}, "-pacs.002-001"]},
                                "MsgDefIdr": "pacs.002.001.10",
                                "BizSvc": "swift.cbprplus.02",
                                "CreDt": { "if": [
                                    {"var": "data.SwiftMT.fields.32A.value_date"},
                                    {"cat": [{"var": "data.SwiftMT.fields.32A.value_date"}, "T00:00:00+00:00"]},
                                    "9999-12-31T00:00:00+00:00"
                                ]},
                                "CpyDplct": "CODU",
                                "PssblDplct": false,
                                "Prty": "NORM",
                                "Rltd": {
                                    "Fr": {
                                        "FIId": {
                                            "FinInstnId": {
                                                "BICFI": { "if": [
                                                    {"var": "data.SwiftMT.basic_header.sender_bic"},
                                                    {"var": "data.SwiftMT.basic_header.sender_bic"},
                                                    { "if": [
                                                        {"var": "data.SwiftMT.fields.52.A.bic"},
                                                        {"var": "data.SwiftMT.fields.52.A.bic"},
                                                        "NOTPROVIDED"
                                                    ]}
                                                ]}
                                            }
                                        }
                                    },
                                    "To": {
                                        "FIId": {
                                            "FinInstnId": {
                                                "BICFI": { "if": [
                                                    {"var": "data.SwiftMT.application_header.receiver_bic"},
                                                    {"var": "data.SwiftMT.application_header.receiver_bic"},
                                                    { "if": [
                                                        {"var": "data.SwiftMT.fields.58.A.bic"},
                                                        {"var": "data.SwiftMT.fields.58.A.bic"},
                                                        "NOTPROVIDED"
                                                    ]}
                                                ]}
                                            }
                                        }
                                    },
                                    "MsgDefIdr": "pacs.002.001.10",
                                    "BizMsgIdr": {"var": "data.SwiftMT.fields.20.reference"},
                                    "CreDt": { "if": [
                                        {"var": "data.SwiftMT.fields.32A.value_date"},
                                        {"cat": [{"var": "data.SwiftMT.fields.32A.value_date"}, "T12:00:00+00:00"]},
                                        "9999-12-31T00:00:00+00:00"
                                    ]}
                                }
                            }
                        },
                        {
                            "path": "temp_data.Sender",
                            "logic": { "if": [
                                {"var": "data.SwiftMT.basic_header.sender_bic"},
                                {"var": "data.SwiftMT.basic_header.sender_bic"},
                                { "if": [
                                    {"var": "data.SwiftMT.fields.52.A.bic"},
                                    {"var": "data.SwiftMT.fields.52.A.bic"},
                                    "NOTPROVIDED"
                                ]}
                            ]}
                        },
                        {
                            "path": "temp_data.Receiver",
                            "logic": { "if": [
                                {"var": "data.SwiftMT.application_header.receiver_bic"},
                                {"var": "data.SwiftMT.application_header.receiver_bic"},
                                { "if": [
                                    {"var": "data.SwiftMT.fields.58.A.bic"},
                                    {"var": "data.SwiftMT.fields.58.A.bic"},
                                    "NOTPROVIDED"
                                ]}
                            ]}
                        }
                    ]
                }
            }
        }
    ]
}
